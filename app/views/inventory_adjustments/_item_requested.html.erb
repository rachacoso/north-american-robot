<% if adjustment.type == "requested" %>
<div <%= adjustment.complete? ? "class=complete" : "" %>>
<% if adjustment.complete? %>
<div class="complete-indicator shipped"><i class="fa fa-check" aria-hidden="true"></i> shipped</div>
<% end %>
<%= adjustment.units %><br>
<small>Units Requested</small><br>
<%= simple_format(adjustment.comment,{ class: 'comments' }, wrapper_tag: 'div').html_safe %>
</div>
<% if adjustment.complete? %>
<div class="comments-complete shipped">Included in shipment of <%= adjustment.associated_shipments.first.units %> Units on <%= adjustment.associated_shipments.first.c_at.in_time_zone("Pacific Time (US & Canada)").strftime("%B %d, %Y at %H:%M %Z") %></div>
<% end %>
<% end %>