<div class="row">
	<div class="small-12 columns text-center">
		<% if @adjustment.type == "request" %>
			<h2>Edit Inventory Request</h2>
		<% elsif @adjustment.type == "received" %>
			<h2>Edit Inventory Received</h2>
		<% elsif @adjustment.type == "sent" %>
			<h2>Edit Inventory Sent</h2>
		<% end %>
	</div><!--/.small-12-->
</div><!--/.row-->
<%= form_for @adjustment, remote: true do |f| %>
<div class="row">
	<div class="medium-4 medium-centered columns text-center">
		<%= f.number_field :units %>
	</div><!--/.medium-4-->
</div><!--/.row-->
<div class="row">
	<div class="small-12 columns text-center">
		<%= f.text_area :comment, rows: "5" %>
	</div><!--/.small-12-->
</div><!--/.row-->
<div class="row">
	<div class="small-12 columns text-center">
		<%= f.submit "Update", class: "landing-button tiny" %>
	</div><!--/.small-12-->
</div><!--/.row-->
<% end %>