<% @brand.products.each do |product| %>
<table class="inventory" >	
	<tr class="product-header">
		<td colspan="4"><%= product.name %></td>
	</tr>
	<tr class="adjustments-header">
		<th>DATE</th>
		<th>UNITS REQUESTED BY LANDING</th>
		<th>UNITS SHIPPED BY <%=@brand.company_name %></th>
		<th>UNITS RECEIVED (DEDUCTED)</th>
	</tr>
	<% if product.inventory_adjustments.blank? %>
	<tr class="item">
		<td colspan="2">&nbsp;</td>
		<td colspan="2">&nbsp;</td>
	</tr>
	<% end %>
	<% product.inventory_adjustments.each do |adjustment| %>
	<tr class="item">
		<td>
			<%= adjustment.c_at.strftime("%B %d, %Y") %><br>
			<small><%= adjustment.c_at.in_time_zone("Pacific Time (US & Canada)").strftime("%H:%M:%S %Z") %></small>
		</td>
		<td><%= adjustment.type == "request" ? "#{adjustment.units}<br>#{simple_format(adjustment.comment,{}, wrapper_tag: "small")}".html_safe : "&nbsp;".html_safe %></td>
		<td><%= adjustment.type == "sent" ? "#{adjustment.units}<br>#{simple_format(adjustment.comment,{}, wrapper_tag: "small")}".html_safe : "&nbsp;".html_safe %></td>
		<td>
			<% if adjustment.type == "received" %>
				<%= link_to_if @current_user.administrator?, "#{adjustment.units}<br>#{simple_format(adjustment.comment,{}, wrapper_tag: "small")}".html_safe, edit_inventory_adjustment_url(adjustment.id), remote: true %>
			<% elsif adjustment.type == "deducted" %>
				<span style="color:red;">(<%= adjustment.units %>)</span><br>
				<small>Deduction from 
					<% if @current_user.administrator? %>
					<%= link_to "order from #{adjustment.order.orderer.company_name}",admin_order_view_url(adjustment.order), target: "_blank" %>
					<% else %>
					<%= link_to "order from #{adjustment.order.orderer.company_name}",order_url(adjustment.order), target: "_blank" %>
					<% end %>
				</small><br>
				<%= simple_format(adjustment.comment,{}, wrapper_tag: "small") %>
			<% end %>
		</td>
	</tr>
	<% end %>
	<tr class="total">
		<td colspan="3">TOTAL INVENTORY: </td>
		<td><%= product.inventory ||= 0 %></td>
	</tr>
	<tr class="controls">
		<% if @current_user.administrator? %>
		<td>&nbsp;</td>
		<td class="addnew"><%= link_to "add inventory request", new_inventory_adjustment_url("request",product.id), remote: true %></td>
		<td>&nbsp;</td>
		<td class="addnew"><%= link_to "add received inventory", new_inventory_adjustment_url("received",product.id), remote: true %></td>
		<% else %>
		<td colspan="2">&nbsp;</td>
		<td class="addnew"><%= link_to "add shipped inventory", new_inventory_adjustment_url("sent",product.id), remote: true %></td>
		<td>&nbsp;</td>
		<% end %>
	</tr>
</table>
<% end %>