<% @brand.products.each do |product| %>
<table class="inventory" >	
	<tr class="product-header">
		<td colspan="4"><%= product.name %></td>
	</tr>
	<tr class="adjustments-header">
		<th>DATE</th>
		<th>UNITS REQUESTED BY LANDING</th>
		<th>UNITS SHIPPED BY <%=@brand.company_name %></th>
		<th>UNITS RECEIVED (UNITS DEDUCTED)</th>
	</tr>
	<% if product.inventory_adjustments.blank? %>
	<tr class="item">
		<td colspan="2">&nbsp;</td>
		<td colspan="2">&nbsp;</td>
	</tr>
	<% end %>
	<% product.inventory_adjustments.order_by(c_at: :asc).each do |adjustment| %>
	<tr class="item">
		<td>
			<%= adjustment.c_at.in_time_zone("Pacific Time (US & Canada)").strftime("%B %d, %Y") %><br>
			<small><%= adjustment.c_at.in_time_zone("Pacific Time (US & Canada)").strftime("%H:%M:%S %Z") %></small>
		</td>
		<td>
			<%= render partial: "inventory_adjustments/item_requested", locals: { adjustment: adjustment } %>
		</td>
		<td>
			<%= render partial: "inventory_adjustments/item_shipment", locals: { adjustment: adjustment } %>
		</td>
		<td>
			<%= render partial: "inventory_adjustments/item_received_deducted", locals: { adjustment: adjustment } %>
		</td>
	</tr>
	<% end %>
	<tr class="controls">
		<% if @current_user.administrator? %>
		<td>&nbsp;</td>
		<td class="addnew"><%= link_to "add inventory request", new_inventory_adjustment_url("requested",product.id), remote: true %></td>
		<td>&nbsp;</td>
		<td class="addnew"><%= link_to "add received inventory", new_inventory_adjustment_url("received",product.id), remote: true %></td>
		<% else %>
		<td colspan="2">&nbsp;</td>
		<td class="addnew"><%= link_to "add shipped inventory", new_inventory_adjustment_url("shipment",product.id), remote: true %></td>
		<td>&nbsp;</td>
		<% end %>
	</tr>
	<tr class="total">
		<td colspan="3">TOTAL INVENTORY: </td>
		<td><%= product.inventory ||= 0 %></td>
	</tr>

</table>
<% end %>