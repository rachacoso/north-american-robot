$('#order-table-data').html("<%= j (render partial: 'shared/orders/order_table', locals: {order: @order}) %>");
$('#open-orderer-submit').html("<%= j (render partial: 'orders/showfull/open_orderer_submit', locals: { order: @order }) %>");
$('#view-orders-buttons').html("<%= j (render partial: 'shared/profile/components/view_orders_buttons', locals: {profile: @order.brand, section: @section}) %>");

<% else %>

$('#view-orders-buttons').html("<%= j (render partial: 'shared/profile/components/view_orders_buttons', locals: {profile: @order.brand, section: @section}) %>");
$('#order-data').html("<%= j (render partial: 'orders/show_order') %>");
