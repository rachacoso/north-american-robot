<%= form_for @order_item, remote: true do |f| %>
<%= hidden_field_tag "product_id", @order_product.id %>
<div class="row">
	<div class="medium-6 columns">
		<h3><%= @order_product.brand.company_name %></h3>
		<h2><strong><%= @order_product.name %></strong></h2>
	</div><!--/.medium-6-->
	<div class="medium-6 columns">
		<br>
			<div class="row">
				<div class="small-10 medium-8 small-centered columns">
					<div class="row">
						<div class="small-12 columns text-center">
							<p>$ <%= @order_product.msrp %> MSRP</p>
						</div><!--/.small-12-->
					</div><!--/.row-->
					<div class="row collapse">
						<div class="small-6 columns">
							<%= f.number_field :quantity, min: 0, label: false %>		
						</div><!--/.small-6-->
						<div class="small-6 columns">
							<span class="postfix">UNITS</span>
						</div><!--/.small-6-->
					</div><!--/.row-->
				</div><!--/.small-12-->
			</div><!--/.row-->
			<div class="row">
				<div class="small-12 columns text-center">
					<%= f.submit "Order SKU", class: "tiny button" %>
				</div><!--/.small-12-->
			</div><!--/.row-->
		<span style="color: red;font-weight: 100;font-size: 0.75em;"><%= flash[:error] ? flash[:error] : "" %></span>
	</div><!--/.medium-6-->
</div><!--/.row-->
<% end %>



