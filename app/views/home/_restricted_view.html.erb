<div id="profile-restricted-view">
	<div class="row">
		<div class="small-12 columns text-center">
			<%= link_to root_url do %><%= image_tag 'v2/logo.svg', width: "100" %><% end %>
		</div><!--/.small-12-->
		<div class="small-12 columns text-center">
			<h2>You need a FREE account to access this area</h2>
			<h3>[Text about what functionality is available here]</h3>
		</div><!--/.small-12-->
		<div class="small-12 columns">
			<br>
		</div><!--/.small-12-->
		<div class="small-5 columns text-right">
			<%= link_to "SIGN IN", login_url, remote: true, class: "action-link" %>
