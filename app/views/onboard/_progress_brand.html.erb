<ul class="onboard-modal-header" data-steps="3">
	<li <%= get_onboard_stage_class(current_stage: stage[:minor], stage: 1)%>>
		<span data-step="1">Enter Company Info</span>
	</li>
	<li <%= get_onboard_stage_class(current_stage: stage[:minor], stage: 2)%>>
			<span data-step="2">Enter Contact Info</span>
	</li>
	<li <%= get_onboard_stage_class(current_stage: stage[:minor], stage: 3)%>>
		<span data-step="3">Enter Products</span>
	</li>
</ul>
