<%= form_for @retailer, url: retailer_url do |f| %>
<%= f.hidden_field :company_name %>
<%= hidden_field_tag "redirect_anchor", "a-sectors" %>
<div class="row">
	<div class="small-12 columns">
		<a class="anchor" id="a-sectors"></a>
		<h1>Sectors</h1>
	</div>
</div>

<div class="row editform">	
	<div class="medium-10 push-2 columns">		
		<% Sector.order_by(:name => "asc").each do |sc| %>
			<%= check_box_tag "sectors[#{sc.id}]", sc.id, (@retailer.sectors.find(sc) rescue false) ? true : false %>
			<%= label_tag("sectors[#{sc.id}]", sc.name) %>
			<% if sc.subsectors %>
			<div class="row collapse">
				<div class="small-1 columns">
					&nbsp;
				</div><!--/.small-1-->
				<div class="small-11 columns">
					<% sc.subsectors.order_by(:name => "asc").each do |ssc| %>
						<%= hidden_field_tag "subsectors[#{ssc.id}]", 0, id: '' %>
						<%= check_box_tag "subsectors[#{ssc.id}]", ssc.id, (@retailer.subsectors.find(ssc) rescue false) ? true : false %>
						<%= label_tag("subsectors[#{ssc.id}]", ssc.name) %>
					<% end %>					
				</div><!--/.small-11-->
			</div><!--/.row-->
			<% end %>
	  <% end %>
	</div>
</div>

<div class="row">
	<div class="medium-10 push-2 columns">
		<%= f.submit 'Update Sectors', class: "tiny radius alert button right" %>
	</div>
</div>
<% end %>