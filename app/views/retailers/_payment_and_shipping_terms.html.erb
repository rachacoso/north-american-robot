<br>
<a class="anchor" id="a-payment-shipping-terms"></a>
<div class="row clearfix">
	<%= form_for @retailer, url: retailer_url, remote: true do |f| %>
	<%= hidden_field_tag "redirect_anchor", "a-payment-shipping-terms" %>
		<div class="small-12 columns editform">

<div class="row">
	<div class="small-12 columns">
		<h3>Payment Terms</h3>
<%= radio_button_tag("retailer[payment_terms]", "Prepayment", @retailer.payment_terms == 'Prepayment' || !@retailer.payment_terms ) %>
<%= label_tag("retailer[payment_terms]_Prepayment", "Prepayment") %>
<%= radio_button_tag("retailer[payment_terms]", "Net 30", @retailer.payment_terms == 'Net 30' ) %>
<%= label_tag("retailer[payment_terms]_Net_30", "Net 30") %>
<%= radio_button_tag("retailer[payment_terms]", "Net 45", @retailer.payment_terms == 'Net 45' ) %>
<%= label_tag("retailer[payment_terms]_Net_45", "Net 45") %>
<%= radio_button_tag("retailer[payment_terms]", "Net 60", @retailer.payment_terms == 'Net 60' ) %>
<%= label_tag("retailer[payment_terms]_Net_60", "Net 60") %>

	</div><!--/.small-12-->
</div><!--/.row-->

<hr>
<div class="row">
	<div class="small-12 columns">
		<h3>U.S. Shipping Terms</h3>
	</div><!--/.small-12-->
	<div class="small-6 columns">
		<%= f.select(:us_shipping_terms, options_for_select([['Brand', 'Brand'], ['Retailer', 'Retailer'], ['Other', 'Other']], @retailer.us_shipping_terms), label: false, prompt: "Select U.S. Shipping Terms") %>
	</div><!--/.small-6-->
	<div class="small-6 columns">

	</div><!--/.small-6-->
</div><!--/.row-->

<hr>
<div class="row">
	<div class="small-12 columns">
		<h3>Other Terms</h3>
	</div><!--/.small-12-->
	<div class="small-6 columns">
		<%= f.check_box :accepts_overseas_shipment, label: false %>
		<%= f.label :accepts_overseas_shipment, 'Accepts Overseas Shipment' %>
	</div><!--/.small-6-->
	<div class="small-6 columns">
		
	</div><!--/.small-6-->
</div><!--/.row-->






			<%= f.submit 'Update Terms', class: "landing-button right" %>
		</div>
	<% end %>
</div>