<% if flash[:error] %>
	$('#article-error').html("<%= flash[:error] %>");
	// $('.overlay#error-overlay').fadeIn();
	$('#article-error').fadeIn();
<% else %>
	$('#article-error').fadeOut(); // hide any error messages
	$('#ajax-success-data').html("Article Updated");
	$('#ajax-message').fadeIn().delay( 1500 ).fadeOut();
	$('#full-article-preview').html("<%= j (render partial: 'full_article') %>");
<% end %>

