<% if flash[:error] %>
	$('#comment-error').html("<%= flash[:error] %>");
	// $('.overlay#error-overlay').fadeIn();
	$('#comment-error').fadeIn();
<% else %>
	$('#comment-error').fadeOut(); // hide any error messages
	$('#ajax-success-data').html("Comment Updated");
	$('#ajax-message').fadeIn().delay( 1500 ).fadeOut();
	$('#order-display').html("<%= j (render partial: 'shared/orders/show') %>");
<% end %>

