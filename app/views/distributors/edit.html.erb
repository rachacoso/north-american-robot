<%= render partial: 'shared/v2/header/main' %>
<%= render partial: 'shared/v2/header/marketplace' %>
<%= render "newuser" if flash[:newuser] %>

<div class="row">
	<div class="medium-11 medium-centered columns">
		<div class="container marketplace">
			<%= render partial: "shared/v2/container/marketplace_lead", locals: {close_link: dashboard_url , subhead: "profile settings"} %>
			<div id="main-body">

				<div id="edit-profile-nav">
					<div id="top">
						<div class="row">
							<div class="medium-6 columns">
								<h1>Your Profile</h1>
								Complete your distributor profile so your potential brand partners can learn about you and be better matched to your brand assortment and customer base.
							</div><!--/.medium-6-->
							<div class="medium-6 columns">
								<div class="row">
									<div class="small-12 columns" id="profile-completeness">					
										<div class="row">
											<div class="small-12 columns text-center">
												<% percent = check_distributor_full_profile(@distributor) %>
												<div class="progress small-12 round <%= percent == 100 ? "success" : "" %>" style="margin: auto;">
												  <span class="meter" style="width: <%= percent %>%"></span>
												</div>
												<small>Your Full Profile is <%= percent == 100 ? "" : "#{percent}%" %> Complete!</small>
											</div>
										</div>
									</div>
								</div><!--/.row-->
							</div><!--/.medium-6-->
						</div><!--/.row-->
					</div>
					<div id="bottom">
						<div class="row">
							<div class="small-12 columns text-left" id="nav">
								<ul class="navlist" id="left">
									<li class="active"><%= link_to 'EDIT Profile', distributor_url %></li>
									<li><%= link_to 'PREVIEW Profile', distributor_full_profile_url %></li>
								</ul>
							</div><!--/.small-12-->
						</div><!--/.row-->
					</div><!--/.bottom-->
				</div><!--/.edit-profile-nav-->


				<div class="row collapse">
					<div class="small-12 columns">

						<div class="row collapse">
							<div class="small-12 columns"><br></div><!--/.small-12-->
							<div class="medium-8 medium-push-4 columns">
									<div class="row">
										<div class="small-12 columns">
											<h2 style="margin-top:15px;">Please complete your distributor profile so your potential partners can learn about you and be better matched to your customer base</h2>
											<h3 style="margin-top:15px;">The profile sections <strong>in bold</strong> are required before you can start purchasing products on Landing International. Filling out the other profile sections will help Brands find you!</h3>
										</div>
									</div>
							</div>
							<div class="medium-4 medium-pull-8 columns medium-text-right">
								<div class="profile-edit-form info-panel">
											<h1>Profile Sections</h1>
											<%= link_to "Company Info", "#a-companyinfo", class: "profile-edit-links required" %><br>
											<%= link_to "Contact Info", "#a-login-info", class: "profile-edit-links required" %><br>
											<%= link_to "Ordering &amp; Payments".html_safe, "#a-ordering-and-payments", class: "profile-edit-links required" %><br>
											<%= link_to "Payment/Shipping Terms &amp; Requirements".html_safe, "#a-payment-shipping-terms", class: "profile-edit-links" %><br>
											<%= link_to "Ordering Requirements", "#a-ordering-requirements", class: "profile-edit-links" %><br>
											<%= link_to "Company Introduction", "#a-company-introduction", class: "profile-edit-links" %><br>
											<%= link_to "Global Good Tags", "#a-social-tags", class: "profile-edit-links" %><br>
											<%= link_to "Sectors", "#a-sectors", class: "profile-edit-links" %><br>
											<%= link_to "Channels", "#a-channels", class: "profile-edit-links" %><br>
											<%= link_to "Channel Capacities", "#a-channelcapacities", class: "profile-edit-links" %><br>
											<%= link_to "Countries of Distribution", "#a-exportcountries", class: "profile-edit-links" %><br>
											<%= link_to "Brand Portfolio", "#a-brand-portfolio", class: "profile-edit-links" %><br>
											<%= link_to "Sales &amp; Education".html_safe, "#a-sales", class: "profile-edit-links" %><br>
											<%= link_to "Marketing / PR Capabilities", "#a-marketing", class: "profile-edit-links" %><br>
											<%= link_to "Tradeshows", "#a-tradeshows", class: "profile-edit-links" %><br>
											<%= link_to "Social Ethos &amp; Impact".html_safe, "#a-social-fields", class: "profile-edit-links" %><br>
											<%= link_to "Verifications".html_safe, "#a-verification", class: "profile-edit-links" %>
											<br>
								</div>
							</div><!--/.medium-4-->
						</div>
						<div class="row">
							<div class="small-12 columns"><hr style="border-top: 1px solid #B3B3B3;"></div><!--/.small-12-->
						</div><!--/.row-->

						<div class="row">
							<div class="medium-4 columns medium-text-right">
								<div class="profile-edit-form info-panel basic-sticky-example">
								<h1>Company Info</h1>
								<h3>This is your general company info. You won't be able to order any products unless you have a Company Name &amp; Address!</h3>
								</div>
							</div><!--/.medium-4-->
							<div class="medium-8 columns">
								<div class="profile-edit-form">
									<%= render "company_info" %>
								</div>
							</div>
						</div><!-- /.row -->

						<div class="row">
							<div class="medium-4 columns medium-text-right">
								<div class="profile-edit-form info-panel">
								<h1>Contact Info</h1>
								<h3>This is your login contact info. You won't be able to order any products unless you have a first name, last name &amp; phone number!</h3>
								</div>
							</div><!--/.medium-4-->
							<div class="medium-8 columns">
								<div class="profile-edit-form">
									<%= render "account_logins" %>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="medium-4 columns medium-text-right">
								<div class="profile-edit-form info-panel">
									<h1>Ordering &amp; Payments</h1>
									<h3>Landing International has partnered with <%= link_to "Armor Payments, a Payoneer Company", "//armorpayments.com", target: "_blank" %> to provide payment escrow services for B2B eCommerce giving you peace of mind with secure transactions.</h3>
									<h3>
										Payment transactions on Landing Interational will take place via Armor Paymets (a Payoneer company) payment escrow service. 
									</h3>
									<% unless @distributor.armor_account_id || @distributor.disable_armor_payments %>
										<h3><strong>In order to participate please follow the instructions to enable your account with Armor Payments (Payoneer).</strong></h3>
									<% end %>

									<%# unless @current_user.company.class.to_s == "Brand" || @current_user.company.armor_account_id.present? %>
									<% unless @current_user.company.class.to_s == "Brand"  %>
										<h4 style="border-top: 1px solid #B3B3B3; border-bottom: 1px solid #B3B3B3;padding-bottom: 0;margin-top: 1em; margin-bottom: 1em;" class="text-center">OR</h4>
											<h3>To Use Other Payment Methods:</h3>
											<h3>
												<strong>If you'd like to use other methods of payment (e.g. Net Terms), you can turn the system off.</strong>
											</h3>
											<div class="panel text-center" style="background-color: #f2f2f2;">
													<h3 >ARMOR PAYMENTS is:</h3>
													<%= form_for @current_user.company, :html => {id: 'disableArmorForm'}, remote: true do |f| %>
														<div class="switch" style="margin-bottom:0;">
															<%= f.check_box('disable_armor_payments', id: 'disableArmor', label: false) %>
															<label for="disableArmor">
																<span class="switch-on" style="color: red">OFF</span>
																<span class="switch-off" style="color: green">ON</span>
															</label>
														</div> 
													<% end %>
											</div>
									<% end %>

								</div>
							</div><!--/.medium-4-->
							<div class="medium-8 columns">
								<div class="profile-edit-form" id="armor-ordering-and-payments">
									<%= render partial: "shared/profileform/armor/armor_ordering_and_payments", locals: { company: @distributor } %>
								</div>
							</div>
						</div>

				<%#		HIDING FOR NOW UNTIL DETERMINE HOW USED  %>
				<%#		<div class="row">  %>
				<%#			<div class="medium-8 medium-push-4 columns">  %>
				<%#				<div class="profile-edit-form">  %>
				<%#					<%#= render "company_contacts" %>
				<%#				</div>  %>
				<%#			</div>  %>
				<%#		</div> %>

