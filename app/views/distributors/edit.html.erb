			</div><!--/.medium-4-->
			<div class="medium-8 columns">
				<div class="profile-edit-form">
					<%= render "ordering_requirements" %>
				</div>
			</div>
		</div>

						<div class="row">
							<div class="medium-4 columns medium-text-right">
								<div class="profile-edit-form info-panel">
								<h1>Company Introduction</h1>
								<h3>Introduce yourself to potential partners with a short (50-100 words) description.</h3>
								</div>
							</div><!--/.medium-4-->
							<div class="medium-8 columns">
								<div class="profile-edit-form">
									<%= render "company_introduction" %>
								</div>
							</div>
						</div>

						<div class="row" data-equalizer>
							<div class="medium-4 columns medium-text-right">
								<div class="profile-edit-form info-panel" data-equalizer-watch>
									<h1>Global Good Tags</h1>
									<h3>Tag yourself!<br>Show everyone how you help people and planet!<br>Stuff like: 'Biodegradable' or 'All-Natural' or 'No Animal Testing'. Don't limit yourself - feel free to enter anything you want!</h3>
								</div>
							</div><!--/.medium-4-->
