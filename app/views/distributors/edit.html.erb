							<div class="medium-8 columns">
								<div class="profile-edit-form">
									<%= render "tradeshows" %>
								</div>
							</div>
						</div><!-- /.row -->

						<div class="row">
							<div class="medium-4 columns medium-text-right">
								<div class="profile-edit-form info-panel">
									<h1>Social Ethos &amp; Impact</h1>
									<h3>Let everyone know how you help people &amp; planet!</h3>
								</div>
							</div><!--/.medium-4-->
							<div class="medium-8 columns">
								<div class="profile-edit-form">
									<%= render "social_fields" %>
