			<div class="medium-4 columns medium-text-right">
				<div class="profile-edit-form info-panel">
				<h1>Payment/Shipping Terms &amp; Requirements</h1>
				<h3>What are your payment and shipping terms and requirements?</h3>
				</div>
			</div><!--/.medium-4-->
			<div class="medium-8 columns">
				<div class="profile-edit-form">
					<%= render "payment_and_shipping_terms" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="medium-4 columns medium-text-right">
				<div class="profile-edit-form info-panel">
				<h1>Ordering Requirements</h1>
