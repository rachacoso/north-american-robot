									<%= render "brand_portfolio" %>
								</div>
							</div>
						</div><!-- /.row -->


						<div class="row">
							<div class="medium-4 columns medium-text-right">
								<div class="profile-edit-form info-panel">
								<h1>Sales &amp; Education</h1>
								<h3>What is your sales &amp; education support?</h3>
								</div>
							</div><!--/.medium-4-->
							<div class="medium-8 columns">
								<div class="profile-edit-form">
									<%= render "sales_education" %>
								</div>
							</div>
						</div><!-- /.row -->

						<div class="row">
							<div class="medium-4 columns medium-text-right">
								<div class="profile-edit-form info-panel">
									<h1>Marketing / PR Capabilities</h1>
									<h3>What are your marketing &amp; PR capabilities?</h3>
