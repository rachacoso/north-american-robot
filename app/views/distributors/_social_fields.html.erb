<br>
<a class="anchor" id="a-social-fields"></a>
<div class="row clearfix">
	<%= form_for @distributor, url: distributor_url, remote: true do |f| %>
	<%= hidden_field_tag "redirect_anchor", "a-social-fields" %>
		<div class="small-12 columns">
			<%= f.text_area :social_causes, rows: 10, label: "Causes You Are Passionate About", placeholder: 'Causes', class: "auto-form-text" %>
			<%= f.text_area :social_organizations, rows: 10, label: "Organizations You Support", placeholder: 'Organizations', class: "auto-form-text" %>
			<%= f.text_area :social_give_back, rows: 10, label: "How You Give Back", placeholder: 'Give Back', class: "auto-form-text" %>
			<%#= f.submit 'Update Social Ethos and Impact', class: "landing-button right" %>
		</div>
	<% end %>
</div>