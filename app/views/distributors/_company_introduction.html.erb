<div class="row">
	<div class="small-12 columns">
		<a class="anchor" id="a-company-introduction"></a>
		<h1>Company Introduction <br><small>(50-100 words)</small></h1>
	</div>
</div>
<div class="row">
	<%= form_for @distributor, url: distributor_url do |f| %>
	<%= hidden_field_tag "redirect_anchor", "a-company-introduction" %>
		<div class="small-12 columns">
			<%= f.text_area :company_introduction, rows: 10, label: false, placeholder: 'Company Introduction' %>
			<%= f.submit 'Update Marketing Activities', class: "tiny radius alert button right" %>
		</div>
	<% end %>
</div>