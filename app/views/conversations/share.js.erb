<% unless @messages_unread > 0 || @new_contact_messages > 0 %>
	$('#unread-message-badge').fadeOut(500)
<% end %>	 

<% if @messages_unread > 0 %>
	$('#top-bar-messages-unread-number').html('<%= @messages_unread %>')
<% else %>
	$('#top-bar-messages-unread').hide()
<% end %>

<% if @new_contact_messages > 0 %>
	$('#top-bar-new-contact-messages-number').html('<%= @new_contact_messages %>')
<% else %>
	$('#top-bar-new-contact-messages').hide()
<% end %>

<% if @messages %>
	$('#message-list').hide().html("<%= j (render partial: 'shared/messages/message_list_all', locals:{stage:@stage}) %>").fadeIn(500);
	$('.conversation-block #view-messages').animate({height:'75%'});
	$('.conversation-block #send-message').animate({height:'25%'});
	$('.conversation-block #message-input').animate({height:'5em'});

	$('#conversation-wrapper .conversation-left-info-column').removeClass('medium-6').addClass('medium-4');
	$('#conversation-wrapper .conversation-right-message-column').removeClass('medium-6').addClass('medium-8');	
	$('.conversation-help').show(500);
	$('.conversation-action#action-one').show(500);
	$('.conversation-action#action-two').hide(500);

	$('#message-submit').hide();
	$('#message-cancel').hide();
	$('#message-input').val('');
	$(".conversation-block #view-messages").animate({ scrollTop: $(".conversation-block #top")[0].scrollHeight}, 500);
<% end %>

$(document).foundation();
$(document).foundation('tab', 'reflow');
$(document).foundation('topbar', 'reflow');

  