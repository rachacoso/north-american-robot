<%= form_for order, :html => {id: 'cancel-date-form'}, remote: true, authenticity_token: true do |f| %>
	<% if order.cancel_date %>
		<%= f.text_field :cancel_date, label: "<small>Cancel Date</small>".html_safe, value: order.cancel_date.strftime("%m-%d-%Y"), placeholder: 'Cancel Date' , class: "datepick ship-cancel" %>
	<% else %>
		<%= f.text_field :cancel_date, label: "<small>Cancel Date</small>".html_safe, value: DateTime.now.strftime("%m-%d-%Y"), placeholder: 'Cancel Date' , class: "datepick ship-cancel"%>
	<% end %>
	<%= f.submit "Add/Update Cancel Date", class: "landing-button" %>
<% end %>