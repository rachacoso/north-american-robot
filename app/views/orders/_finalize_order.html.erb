<% if @order.status == "pending" %>
	<div class="row">
		<div class="small-12 columns text-center">
			<h2>Your order has been submitted to <strong><%= @order.brand.company_name %></strong></h2>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="small-12 columns text-center">
			<a class="landing-button" id="finalized-close">OK</a>
		</div><!--/.small-12-->
	</div><!--/.row-->
<% else %>
	<div class="row">
		<div class="small-12 columns text-center">
			<h2>Would you like to submit this order to <strong><%= @order.brand.company_name %></strong></h2>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="small-12 columns text-center">
			<%= link_to "YES", finalize_order_url(@order,1), class: "landing-button", remote: true %>
			<a class="landing-button secondary" id="finalize-close">NOT YET</a>
			<%#= link_to "NOT YET",  class: "landing-button secondary", id: "finalize-close" %>
		</div><!--/.small-12-->
	</div><!--/.row-->
<% end %>