	<li class="<%= post_delivery_chart(status: order.post_delivery_status, step: "received") %>"><span>Received by Retailer</span><i></i></li>
	<li class="<%= post_delivery_chart(status: order.post_delivery_status, step: "awaiting") %>"><span>Awaiting Payment</span><i></i></li>
	<li class="<%= post_delivery_chart(status: order.post_delivery_status, step: "paid") %>"><span>Paid by Retailer</span><i></i></li>
