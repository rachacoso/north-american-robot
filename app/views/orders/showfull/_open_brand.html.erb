<div class="full-order-container">
	<div class="row">
		<div class="small-12 columns">

			<div class="row">
				<div class="small-12 columns">
					<div id="order-panel-top">
						<%= render partial: "orders/showfull/order_flow_header", locals: { status: order.status , armor: order.armor_enabled? } %>
						<hr>
						<h3>This order is open and may be updated by <%= order.orderer.company_name %></h3>
					</div>
				</div><!--/.small-12-->
			</div><!--/.row-->

			<div class="panel outer">
				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>Next Steps:</h1>
						<h1><span class="step" data-step="1"></span> Set Order Discount Rate (optional)</h1>
						<div class="row">
							<div class="small-12 columns">
								<div class="panel text-right">
									<%= form_for order do |f| %>
										<div class="row">
											<div class="small-12 columns">
												<%= f.label :discount, "Order Discount" %>
												<span style="font-size: 0.7em;font-weight: 200; color: red;"><%= flash[:error] ? flash[:error] : "" %></span>
											</div><!--/.small-12-->
										</div><!--/.row-->
										<div class="row collapse">
											<div class="small-4 small-push-6 medium-1 medium-push-10 columns">
												<%= f.number_field :discount, label: false %>
											</div><!--/.small-4-->
											<div class="small-2 small-push-6 medium-1 medium-push-10 columns end">
												<span class="postfix">%</span>
											</div><!--/.small-2-->
										</div><!--/.row-->
										<div class="row">
											<div class="small-12 columns">
												<%= f.submit "Set Discount", class: "landing-button" %>
											</div><!--/.small-12-->
										</div><!--/.row-->
									<% end %>
									<h4>Updates the discount rate for this order, overriding the default 50% unit discount rate.</h4>
								</div> <!--.panel-->
							</div><!--/.small-12-->
						</div><!--/.row-->
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1><span class="step" data-step="2"></span> Review Current Order</h1>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<div class="panel">
							<%= render "shared/orders/show" %>		
						</div>

					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1><span class="step" data-step="3"></span> Wait for <%= order.orderer.company_name %> to Submit Final Order</h1>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<div class="panel">
							<h3>You will receive an email when <%= order.orderer.company_name %> has finalized and submitted their order.</h3>
						</div>

					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

			</div><!--/.panel outer-->
		</div><!--/.small-12-->
	</div><!--/.row-->
</div><!--/.full-order-container-->