<div class="full-order-container">
	<div class="row">
		<div class="small-12 columns">

			<div class="row">
				<div class="small-12 columns">
					<div id="order-panel-top">
						<%= render partial: "orders/showfull/order_flow_header", locals: { status: order.status } %>
						<hr>
						<h3>This order is open and can be updated</h3>
					</div>
				</div><!--/.small-12-->
			</div><!--/.row-->

			<div class="panel outer">
				
				<div class="row">
					<div class="medium-11 medium-centered columns">

						<div class="row">
							<div class="medium-6 columns">
								<br>
								<h1>1) Confirm Order Details</h1>
								<h3>Click on any item to edit. Have questions? <%= link_to "Contact #{order.brand.company_name}", new_simple_message_url(order.brand), remote:true %></h3>
							</div><!--/.medium-6-->
							<div class="medium-6 columns text-right">
								<%#= link_to "View Brand Profile - #{order.brand.company_name}", view_brand_url(order.brand), class: "landing-button" %>
							</div><!--/.medium-6-->
						</div><!--/.row-->

						<div class="panel">
							<%= render "shared/orders/show" %>		
						</div>

						<br>
						<h1>2) Update Shipping Address</h1>
						<h3>Have questions? <%= link_to "Contact #{order.brand.company_name}", new_simple_message_url(order.brand), remote:true %></h3>
						<div class="panel text-center">
							<%= form_for order do |f| %>
							<div class="row">
								<div class="medium-6 medium-centered columns">
									<div class="small-12 columns">
										<%= f.text_field :ship_to_name, label: "<small>Ship to</small>".html_safe %>
									</div>
								<%= f.fields_for :shipping_address do |ff| %>
								<div class="small-12 columns">
									<%= ff.text_field :address1, label: "<small>Street Address</small>".html_safe %>
									<%= ff.text_field :address2, label: false %>
								</div>
								<div class="medium-4 columns">
									<%= ff.text_field :city, label: "<small>City/Town/Department</small>".html_safe %>
								</div>
								<div class="medium-5 columns">
									<%= ff.text_field :state, label: "<small>State/Province/Region/County</small>".html_safe %>
								</div>
								<div class="medium-3 columns">
									<%= ff.text_field :postcode, label: "<small>Zip/Postal Code</small>".html_safe %>
								</div>
								<div class="medium-6 columns">
									<%= ff.text_field :country, class: "country-autocomplete", placeholder: 'Country', label: "<small>Country</small>".html_safe %>
								</div>
								<% end %>
								</div><!--/.medium-6-->
							</div><!--/.row-->
							<div class="row">
								<div class="medium-6 medium-centered columns">
									<%= f.submit "Update Shipping Address", class: "landing-button" %>
								</div><!--/.medium-6-->
							</div><!--/.row-->
							<% end %>
						</div>

						<br>
						<h1>3) Submit Order to <%= order.brand.company_name %></h1>
						<h3>Have questions? <%= link_to "Contact #{order.brand.company_name}", new_simple_message_url(order.brand), remote:true %></h3>
						<div class="panel text-center">
						<%= link_to "Submit Order to #{order.brand.company_name}", submit_order_url(order,0), class: "landing-button", remote: true %> <span style="font-weight: 100;">or</span>
						<%= link_to "Add More Items to Order", view_brand_url(order.brand), class: "landing-button secondary" %>
						</div>

					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

			</div><!--/.panel outer-->
		</div><!--/.small-12-->
	</div><!--/.row-->
</div><!--/.full-order-container-->