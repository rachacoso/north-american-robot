<div class="full-order-container">
	<div class="row">
		<div class="small-12 columns">

			<div class="row">
				<div class="small-12 columns">
					<div id="order-panel-top">
						<h1>Order Delivered</h1>
						<%= render partial: "orders/showfull/order_flow_header", locals: { status: order.status , armor: (order.armor_enabled? ? true : false ) } %>
						<h3>This order has been delivered.</h3>
					</div>
				</div><!--/.small-12-->
			</div><!--/.row-->

			<div class="panel outer">


				<div class="row">
					<div class="medium-11 medium-centered columns">
						<a name="form"></a>
						<br>
						<% if order.armor_enabled? %>
						<h1>Next Step: Await Review and Payment Release</h1>
						<% else %>
						<h1>Next Step: Await Payment</h1>
						<% end %>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<% if order.armor_enabled? %>
						<div class="info">
							<h3><%= order.orderer.company_name %> will review the shipment before release of payment. You will be notified via email when payment has been released!</h3>
						</div>
						<% end %>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

				<% unless @order.armor_enabled? %>
				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1><span class="step" data-step="1"></span> Await Payment</h1>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<div class="info">
							<h3>According to <%= order.orderer_company_name %>'s Payment Terms (<%= order.payment_terms %>), you should receive payment of</h3>
						</div>
						<div class="panel">
							
							<div class="payment-display">
							<h2><%= number_to_currency(order.total_price) %></h2>
							<h2><small>by</small></h2>
							<h2><%= (order.delivered_date + net_terms_payment_estimate(order: order)[:receipt].to_i ).strftime("%d %b %Y") %> <br><small><%= net_terms_payment_estimate(order: order)[:payment] %> days after delivery on <%= (order.delivered_date ).strftime("%d %b %Y") %> <br>(plus 5 days processing time)</small></h2>
							</div>
							
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1><span class="step" data-step="2"></span> Mark Order as Complete!</h1>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<div class="info">
							<h3>When you have received payment and any outstanding issues resolved, please return here to mark the order as 'Paid &amp; Completed'</h3>
						</div>
						<div class="panel text-center">
															
							<%= link_to "Hooray! Order is 'Paid &amp; Complete'!".html_safe, armor_disabled_completed_order_url(@order,0), class: "landing-button", remote: true %>
								
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->
				<% end %>

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>Order</h1>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<div class="panel">
							<%= render "shared/orders/show" %>		
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

			</div><!--/.panel outer-->
		</div><!--/.small-12-->
	</div><!--/.row-->
</div><!--/.full-order-container-->