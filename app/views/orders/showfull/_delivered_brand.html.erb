<div class="full-order-container">
	<div class="row">
		<div class="small-12 columns">

			<div class="row">
				<div class="small-12 columns">
					<div id="order-panel-top">
						<%= render partial: "orders/showfull/order_flow_header", locals: { status: order.status , armor: (order.armor_enabled? ? true : false ) } %>
						<hr>
						<h3>This order has been delivered.</h3>
					</div>
				</div><!--/.small-12-->
			</div><!--/.row-->

			<div class="panel outer">


				<div class="row">
					<div class="medium-11 medium-centered columns">
						<a name="form"></a>
						<br>
						<h1>Next Step: Await Review and Payment Release</h1>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<div class="panel">

							<% if order.armor_enabled? %>
								<h3><%= order.orderer.company_name %> will review the shipment before release of payment.<br><br> You will be notified via email when payment is released.</h3>
							<% else %>
								<h3><%= order.orderer.company_name %> will review the shipment before release of payment.<br><br> You will be notified via email when payment is released.<br><br> When you have received payment and any outstanding issues resolved, please return here to mark the order as 'Paid &amp; Completed'</h3>
								<% unless @order.armor_enabled? %>
									<%= link_to "ORDER is 'PAID &amp; COMPLETED'".html_safe, armor_disabled_completed_order_url(@order,0), class: "landing-button", remote: true %>
								<% end %>
							<% end %>

						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>Order</h1>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<div class="panel">
							<%= render "shared/orders/show" %>		
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

			</div><!--/.panel outer-->
		</div><!--/.small-12-->
	</div><!--/.row-->
</div><!--/.full-order-container-->