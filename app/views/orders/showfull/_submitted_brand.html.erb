<div class="row">
	<div class="small-12 columns">
		<div class="panel text-right" id="profile-actions">
			<%= link_to "View #{order.orderer_type} Profile", eval("view_#{order.orderer_type.downcase}_url(order.orderer)"), class: "landing-button" %>
			<%= link_to "Contact", new_simple_message_url(order.orderer), remote:true, class: "landing-button" %>
		</div>
	</div><!--/.small-12-->
</div><!--/.row-->

<div class="row">
	<div class="medium-8 columns">
		<span id="profile-company-name">
		<h1><%= order.orderer.company_name %></h1>
		<h4>Orders</h4>
		</span>
	</div><!--/.medium-8-->
	<div class="medium-4 columns text-right">
		<% if order.orderer.logo_file_name %>
			<%= image_tag order.orderer.logo.url(:medium), alt: "Logo" %><br>
		<% else %>
			<% if !order.orderer.facebook.blank? && fb_picture(order.orderer.facebook) %>
				<%= image_tag fb_picture(order.orderer.facebook) %><br>
			<% else %>
				<%= image_tag order.orderer.logo.url(:medium), width: "100", height: "100", alt: "Logo" %><br>
			<% end %>					
		<% end %>
	</div><!--/.medium-4-->
</div><!--/.row-->
<div class="full-order-container">
	<div class="row">
		<div class="small-12 columns">

			<div class="row">
				<div class="small-12 columns">
					<div id="order-panel-top">
					<h2>Submitted Order<br><small>This order has been submitted and may no longer be updated by <%= order.orderer.company_name %></small></h2>
					</div>
				</div><!--/.small-12-->
			</div><!--/.row-->

			<div class="panel outer">

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>1) Add Additional Charges <small>(e.g. shipping, fees)</small></h1>
						<div class="row">
							<div class="small-12 columns">
								<div class="panel">
									<% if order.order_additional_charges.present? %>
									<div class="row" id="additional-cost-headers">
											<div class="medium-3 columns">
												<span style="font-weight: 100;">Name</span>
											</div><!--/"medium-3-->
											<div class="medium-4 columns">
												<span style="font-weight: 100;">Description</span>
											</div><!--/"medium-3-->
											<div class="medium-1 columns">
												<span style="font-weight: 100;">Amount</span>
											</div><!--/"medium-3-->
											<div class="medium-4 columns">
												&nbsp;
											</div><!--/.medium-3-->
										</div><!--/.row-->
									<% order.order_additional_charges.each do |c| %>
										<%= form_for c, url: update_order_additional_charge_url(order,c) do |f| %>
										<div class="row">
											<div class="medium-3 columns">
												<%= f.text_field :name, label: false %>	
											</div><!--/"medium-3-->
											<div class="medium-4 columns">
												<%= f.text_field :description, label: false %>	
											</div><!--/"medium-4-->
											<div class="medium-2 columns">
												<div class="row collapse">
													<div class="small-2 columns">
														<span class="prefix">$</span>
													</div><!--/.small-2-->
													<div class="small-10 columns">
														<%= f.number_field :amount, step: "any", value: display_price(c.amount), label: false %>
													</div><!--/.small-10-->
												</div><!--/.row-->
											</div><!--/"medium-2-->
											<div class="medium-3 columns">
											<%= f.submit "Update", class: "landing-button", style: "margin-top: 0;" %>
											<%= link_to 'Delete', delete_order_additional_charge_url(order,c), :method => 'Delete', data: { :confirm => 'Are you sure you want to delete this charge?'}, class: "landing-button", style: "margin-top: 0;"  %>
											</div><!--/.medium-3-->
										</div><!--/.row-->
										<% end %>
									<% end %>
									<hr style="margin-top: 0; margin-bottom: 16;">
									<% end %>
									<%= flash[:error] ? "<span class='error'>#{flash[:error]}</span>".html_safe : "" %>
									<%= form_for OrderAdditionalCharge.new, url: create_order_additional_charge_url(order) do |f| %>
										<div class="row">
											<div class="medium-3 columns">
												<%= f.text_field :name, placeholder: 'Name (required)', label: false %>
											</div><!--/"medium-3-->
											<div class="medium-4 columns">
												<%= f.text_field :description, placeholder: 'Description', label: false %>
											</div><!--/"medium-4-->
											<div class="medium-2 columns">
												<div class="row collapse">
													<div class="small-2 columns">
														<span class="prefix">$</span>
													</div><!--/.small-2-->
													<div class="small-10 columns">
														<%= f.number_field :amount, step: "any", placeholder: 'Amount (required)', label: false %>	
													</div><!--/.small-10-->
												</div><!--/.row-->
											</div><!--/"medium-2-->
											<div class="medium-3 columns">
												<%= f.submit "Add Charge", class: "landing-button", style: "margin-top: 0;" %>
											</div><!--/.medium-3-->
										</div><!--/.row-->
									<% end %>
								</div> <!--.panel-->
							</div><!--/.small-12-->
						</div><!--/.row-->
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->


				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>2) Review Order</h1>
						<div class="panel">
							<%= render "shared/orders/show" %>		
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->


				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>2) Send <%= order.orderer.company_name %> the Updated Order</h1>
						<div class="panel">
							<%= render "shared/orders/show" %>		
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

			</div><!--/.panel outer-->
		</div><!--/.small-12-->
	</div><!--/.row-->
</div><!--/.full-order-container-->