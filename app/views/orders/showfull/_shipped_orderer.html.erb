<div class="full-order-container">
	<div class="row">
		<div class="small-12 columns">

			<div class="row">
				<div class="small-12 columns">
					<div id="order-panel-top">
						<h1>Order Shipped</h1>
						<%= render partial: "orders/showfull/order_flow_header", locals: { status: order.status , armor: order.armor_enabled? , order: order} %>
						<h3>This order has been shipped.</h3>
					</div>
				</div><!--/.small-12-->
			</div><!--/.row-->

			<div class="panel outer">

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1 class="top-level">The order has been shipped!<br>Next Step: Await Delivery</h1>
						<%= render partial: "orders/add_additional_comment_link" %>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1><span class="step" data-step="1" ></span> Await Delivery</h1>
						
						<% if order.armor_enabled? %>
						<div class="info">
						<h3>After delivery and review, you can return here to release payment. Otherwise, the funds will be released automatically after three days. </h3>
						</div>
						<% else %>
						<div class="info">
							<h3><%= order.brand_company_name %> has shipped your order! Carrier information is below.</h3>
						</div>
						<% end %>
						
						<div class="panel">
							<h3>Shipment Info</h3>
							<h4>Carrier: <strong><%= order.armor_shipment_carrier_name %></strong></h4>
							<h4>Tracking ID: <strong><%= order.armor_shipment_tracking_number %></strong></h4>
							<%= "<h4>Description: <strong>#{order.armor_shipment_description}</strong> </h4>".html_safe if order.armor_shipment_description.present? %>
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

			<% unless @order.armor_enabled? %>
				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1><span class="step" data-step="2" ></span> Mark Order as Delivered</h1>
						<div class="info">
							<h3>After you've received and reviewed the shipment, you can return here to mark the shipment as delivered. </h3>
						</div>
						<div class="panel text-center">
							<%= link_to "Order has been received!", armor_disabled_received_order_url(@order,0), class: "landing-button", remote: true %>
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->
			<% end %>

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1 class="top-level">Order</h1>

						<div class="panel" id="order-display">
							<%= render "shared/orders/show" %>		
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

			</div><!--/.panel outer-->
		</div><!--/.small-12-->
	</div><!--/.row-->
</div><!--/.full-order-container-->