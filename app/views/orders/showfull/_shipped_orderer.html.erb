<div class="full-order-container">
	<div class="row">
		<div class="small-12 columns">

			<div class="row">
				<div class="small-12 columns">
					<div id="order-panel-top">
						<%= render partial: "orders/showfull/order_flow_header", locals: { status: order.status , armor: (order.armor_enabled? ? true : false ) } %>
						<hr>
						<h3>This order has been shipped.</h3>
					</div>
				</div><!--/.small-12-->
			</div><!--/.row-->

			<div class="panel outer">

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>Next Step: Await Delivery</h1>
						<h3>Have questions? <%= link_to "Contact #{order.brand.company_name}", new_simple_message_url(order.brand), remote:true %></h3>
						<div class="panel">
							<h3>The order has been shipped.</h3>
							<% if order.armor_enabled? %>
							<h3>After delivery and review, you can return here to release payment. Otherwise, the funds will be released automatically after three days. </h3>
							<% else %>
							<h3>After delivery and review, you can return here to mark the shipment as delivered. </h3>
							<% end %>
							<hr style="border-top: 1px solid #cacaca">
							<h2>Shipment Info</h2>
							<h4>Carrier: <strong><%= order.armor_shipment_carrier_name %></strong></h4>
							<h4>Tracking ID: <strong><%= order.armor_shipment_tracking_number %></strong></h4>
							<%= "<h4>Description: <strong>#{order.armor_shipment_description}</strong> </h4>".html_safe if order.armor_shipment_description.present? %>
							
							<% unless @order.armor_enabled? %>
								<%= link_to "ORDER HAS BEEN RECEIVED", armor_disabled_received_order_url(@order,0), class: "landing-button", remote: true %>
							<% end %>


						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>Order</h1>
						<h3>Have questions? <%= link_to "Contact #{order.brand.company_name}", new_simple_message_url(order.brand), remote:true %></h3>
						<div class="panel">
							<%= render "shared/orders/show" %>		
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

			</div><!--/.panel outer-->
		</div><!--/.small-12-->
	</div><!--/.row-->
</div><!--/.full-order-container-->