<div class="full-order-container">
	<div class="row">
		<div class="small-12 columns">

			<div class="row">
				<div class="small-12 columns">
					<div id="order-panel-top">
						<%= render partial: "orders/showfull/order_flow_header", locals: { status: order.status , armor: true } %>
						<hr>
						<h3>This order is in dispute.</h3>
					</div>
				</div><!--/.small-12-->
			</div><!--/.row-->

			<div class="panel outer">


				<div class="row">
					<div class="medium-11 medium-centered columns">
						<a name="form"></a>
						<br>
						<h1>Next Step: Resolve dispute</h1>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<div class="panel">
							<h3>Dispute settlement will be handled via Armor Payments, a Payoneer company.  You can view the latest information and take any actions regarding the dispute via the button below. </h3>
							<% if order.errors.any? %>
								<h4>Sorry, there was an error. Please reload the page</h4>
								<% order.errors.full_messages.each do |m| %>
									<%= m %><br>
								<% end %>
							<% else %>
								<% if @armor_payment_dispute_url.present? %>
									<%= render partial: "orders/showfull/disputed_order_status", locals: { disputeurl: @armor_payment_dispute_url, order: order } %>
								<% end %>
							<% end %>
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>Order</h1>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<div class="panel">
							<%= render "shared/orders/show" %>		
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

			</div><!--/.panel outer-->
		</div><!--/.small-12-->
	</div><!--/.row-->
</div><!--/.full-order-container-->