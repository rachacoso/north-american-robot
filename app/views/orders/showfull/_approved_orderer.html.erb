<div class="full-order-container">
	<div class="row">
		<div class="small-12 columns">

			<div class="row">
				<div class="small-12 columns">
					<div id="order-panel-top">
						<%= render partial: "orders/showfull/order_flow_header", locals: { status: order.status } %>
						<hr>
						<h3>This order is awaiting payment transfer to escrow.</h3>
					</div>
				</div><!--/.small-12-->
			</div><!--/.row-->

			<div class="panel outer">


				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>Next Step: Submit Payment</h1>
						<h3>Have questions? <%= link_to "Contact #{order.brand.company_name}", new_simple_message_url(order.brand), remote:true %></h3>
						<div class="panel">
							<h2>Landing International has partnered with Armor Payments and there are two ways to complete your payment</h2>

							<h2>A) Via Armor Payments Website</h2>
							<h3>An email was sent from Armor Payments to <%= order.armor_buyer_email ? "#{order.armor_buyer_email}" : "you" %> with instructions on how to complete payment. <br>Please follow those instructions to complete payment via the Armor Payments website.</h3>
							<h2>B) Via Direct Bank/Wire Transfer</h2>
							<h3>Click on the button below to view instructions on how to complete payment via bank or wire transfer.</h3>
							<% if order.errors.any? %>
								<h4>Sorry, there was an error. Please reload the page</h4>
								<% order.errors.full_messages.each do |m| %>
									<%= m %><br>
								<% end %>
							<% else %>
								<% if @armor_payment_instructions_url.present? %>
									<%= render partial: "orders/showfull/approved_orderer_payment_instructions", locals: {url: @armor_payment_instructions_url} %>
								<% end %>
							<% end %>
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>Order</h1>
						<h3>Have questions? <%= link_to "Contact #{order.brand.company_name}", new_simple_message_url(order.brand), remote:true %></h3>
						<div class="panel">
							<%= render "shared/orders/show" %>		
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->


			</div><!--/.panel outer-->
		</div><!--/.small-12-->
	</div><!--/.row-->
</div><!--/.full-order-container-->