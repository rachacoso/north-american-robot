<div class="full-order-container">
	<div class="row">
		<div class="small-12 columns">

			<div class="row">
				<div class="small-12 columns">
					<div id="order-panel-top">
						<%= render partial: "orders/showfull/order_flow_header", locals: { status: order.status , armor: true } %>
						<hr>
						<h3>This order has been shipped.</h3>
					</div>
				</div><!--/.small-12-->
			</div><!--/.row-->

			<div class="panel outer">

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<a name="form"></a>
						<br>
						<h1>Next Step: Await Delivery and Review</h1>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<div class="panel">
							<h3>You will be notified by email when the shipment is delivered.</h3>
							<h3>The buyer will then review the shipment and release the funds from escrow.</h3>

							<table class="armor-shipment-info">
								<tr><td colspan="2" style="background: #f3f3f3;">Shipment Info</td></tr>
								<tr>
									<td>Carrier:</td>
									<td> <%= order.armor_shipment_carrier_name %></td>
								</tr>
								<tr>
									<td>Tracking ID:</td>
									<td><%= order.armor_shipment_tracking_number %></td>
								</tr>
								<%= "<tr><td>Description:</td><td>#{order.armor_shipment_description}</td></tr>".html_safe if order.armor_shipment_description.present? %>
							</table>

						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

				<div class="row">
					<div class="medium-11 medium-centered columns">
						<br>
						<h1>Order</h1>
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
						<div class="panel">
							<%= render "shared/orders/show" %>		
						</div>
					</div><!--/.medium-11 medium-centered-->
				</div><!--/.row-->

			</div><!--/.panel outer-->
		</div><!--/.small-12-->
	</div><!--/.row-->
</div><!--/.full-order-container-->