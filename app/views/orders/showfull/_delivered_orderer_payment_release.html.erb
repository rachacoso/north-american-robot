<h3>If you are happy with your delivery, please release payment from escrow. <br>If no action is taken, payment automatically releases in three days.</h3>

<a id="releasePayment-lightbox-preview" data-url="<%= url %>" class="landing-button">Release Payment from Escrow</a>
<h3>or, if you have issues with your order, you can</h3>
<a id="disputePayment-lightbox-preview" data-url="<%= disputeurl %>" class="landing-button">Initiate a Dispute</a>
<br><br>
<% content_for :javascript_foot do %>
	<script type="text/javascript">
		var ArmorReleaseClicked = false;
		$("#releasePayment-lightbox-preview").click(function(){
			if (!ArmorReleaseClicked) {
				var url = $(this).attr("data-url");
				showArmorPaymentsLightboxUi(url, 250, true);
				ArmorReleaseClicked = true;
			} else {
				$('#order-item-data').html("<div class='text-center'><h3>Sorry, the link has expired. Reloading page...</h3></div>");
				$('.overlay#order-item-overlay').fadeIn();
				$('#order-item').fadeIn();
				window.location.replace("<%= order_url(order) %>");
			}
		});
	</script>
	<script type="text/javascript">
		var ArmorDisputeClicked = false;
		$("#disputePayment-lightbox-preview").click(function(){
			if (!ArmorDisputeClicked) {
				var url = $(this).attr("data-url");
				showArmorPaymentsLightboxUi(url, 250, true);
				ArmorDisputeClicked = true;
			} else {
				$('#order-item-data').html("<div class='text-center'><h3>Sorry, the link has expired. Reloading page...</h3></div>");
				$('.overlay#order-item-overlay').fadeIn();
				$('#order-item').fadeIn();
				window.location.replace("<%= order_url(order) %>");
			}
		});
	</script>
<% end %>

