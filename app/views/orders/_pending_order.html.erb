<% if @order.status == "pending" %>
	<div class="row">
		<div class="small-12 columns text-center">
			<h3>The updated order has been submitted to <br><strong><%= @order.orderer.company_name %></strong></h3>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="small-12 columns text-center">
			<%= link_to "OK", orders_url(@order), class: "landing-button", id: "submit-close" %>
		</div><!--/.small-12-->
	</div><!--/.row-->
<% else %>
	<div class="row">
		<div class="small-12 columns text-center">
			<h2>Would you like to submit this order to <br><strong><%= @order.orderer.company_name %></strong></h2>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="small-12 columns text-center">
			<%= link_to "Yes", pending_order_url(@order,1), class: "landing-button", remote: true %>
			<%= link_to "Not Yet", orders_url(@order), class: "landing-button secondary", id: "submit-close" %>
		</div><!--/.small-12-->
	</div><!--/.row-->
<% end %>