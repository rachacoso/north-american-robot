<% if @order.status == "submitted" %>
	<div class="row">
		<div class="small-12 columns text-center">
			<h3>Your order has been submitted to <br><strong><%= @order.brand.company_name %></strong></h3>
			<h3>Thank you for your order. You should receive a final invoice shortly with the estimated shipping time and costs.</h3>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="small-12 columns text-center">
			<%= link_to "OK", view_brand_url(@order.brand), class: "landing-button", id: "submit-close" %>
		</div><!--/.small-12-->
	</div><!--/.row-->
<% elsif !@current_user.armor_user_id %>

	<div class="row">
		<div class="small-12 columns">
			<h2>Almost There!<br>There's one last step you need to complete before you can submit this order to <strong><%= @order.brand.company_name %></strong>.</h2>
			<hr>
			<h3>For your security and convenience, Landing International has partnered with <%= link_to "Armor Payments, a Payoneer company", "//armorpayments.com", target: "_blank" %> to handle all payment transactions via secure escrow.</h3>
		</div><!--/.small-12-->
	</div><!--/.row-->

	<% allow, missing, errors = @current_user.allows_armor_signup %>
	<% if @current_user.company.armor_account_id.blank? && allow %>

		<div class="row">
			<div class="small-12 columns">
				<h3><strong>In order to participate you'll need to enable Armor Payments (Payoneer) Escrow by accepting their <a href="https://app.armorpayments.com/terms/160405182787" target="_BLANK">Terms and Conditions</a>.</strong></h3>
				<hr>				
			</div><!--/.small-12-->
		</div><!--/.row-->
		<div class="row">
			<div class="small-12 columns text-center">
			<%= form_tag ap_create_account_url, method: "post", id: "armor-signup", remote: true do %>
				<%= render 'shared/profileform/armor/armor_signup_form' %>
				<span class="error" id="order-flow-armor-error" style="display:none;"></span>
				<%= submit_tag "Enable Armor Payments (Payoneer) Escrow", class: "landing-button" %>
				<%= link_to "Not Yet", view_brand_url(@order.brand), class: "landing-button secondary", id: "submit-close" %>
			<% end %>
			</div><!--/.small-12-->
		</div><!--/.row-->

	<% else %>

		<div class="row">
			<div class="small-12 columns">
				<h3><strong>In order to participate you'll need to enable Armor Payments (Payoneer) Escrow, but there are a few profile fields you'll need to fill out first (i.e. company name, mailing address and contact info).</strong></h3>
				<hr>				
			</div><!--/.small-12-->
		</div><!--/.row-->

		<div class="row">
			<div class="small-12 columns">
			<h3>You need to complete/fix some profile items before you can continue:</h3> 
			
				<div class="panel" style="background-color: #f2f2f2;">
					<% if missing.present? %>
						<h3>Please complete the following:</h3>
						<ul style="font-weight: 100;">
						<% missing.each do |err| %>
							<% if err == "Phone" %>
								<li><%= err %><%= flash[:error] ? " <span style='color: red;'>(#{flash[:error]})</span>".html_safe : "" %></li>
							<% else %>
								<li><%= err %></li>
							<% end %>
						<% end %>
						</ul>
					<% end %>
					<% if errors.present? %>
						<h3>Please fix the following:</h3>
						<ul style="font-weight: 100;">
						<% errors.each do |k,v| %>
							<li><%= v %></li>
						<% end %>
					<% end %>
					</ul>
				</div>

			</div><!--/.small-12-->
		</div><!--/.row-->

		<div class="row">
			<div class="small-12 columns text-center">
				<%= link_to "Go to your Profile Edit Page", eval("#{@current_user.company_type.downcase}_url") + "#a-armor", class: "landing-button" %>
				<%= link_to "Not Yet", view_brand_url(@order.brand), class: "landing-button secondary", id: "submit-close" %>
			</div><!--/.small-12-->
		</div><!--/.row-->

	<% end %>		



<% else %>

	<div class="row">
		<div class="small-12 columns text-center">
			<h2 style="line-height: 1em;">Your order subtotal:<br><small>(not inlcuding shipping and taxes)<br></small><br><strong><%= number_to_currency(@order.subtotal_price) %></strong></h2>
			<h3>Shipping and taxes will be included in a final invoice.</h3>
			<hr>
			<h2>Would you like to submit this order to <br><strong><%= @order.brand.company_name %></strong></h2>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="small-12 columns text-center">
			<%= link_to "Yes", submit_order_url(@order,1), class: "landing-button", remote: true %>
			<%= link_to "Not Yet", view_brand_url(@order.brand), class: "landing-button secondary", id: "submit-close" %>
		</div><!--/.small-12-->
	</div><!--/.row-->

<% end %>