<% if @order.status == "approved" %>
	<div class="row">
		<div class="small-12 columns text-center">
			<h3>You have approved this order to <strong><%= @order.brand.company_name %></strong></h3>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="small-12 columns text-center">
			<%= link_to "OK", orders_url(@order), class: "landing-button", id: "submit-close" %>
		</div><!--/.small-12-->
	</div><!--/.row-->
<% else %>
	<div class="row">
		<div class="small-12 columns text-center">
			<h2 style="line-height: 1em;">Order subtotal:<br><small>(goods)<br></small><strong><%= number_to_currency(@order.subtotal_price) %></strong></h2>
			<h2 style="line-height: 1em;">Additional Charges:<br><small>(shipping and other fees)<br></small><strong><%= number_to_currency(@order.charges_subtotal_price) %></strong></h2>
			<hr>
			<h2>Would you like to approve this order?</h2>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="small-12 columns text-center">
			<%= link_to "Yes", approve_order_url(@order,1), class: "landing-button", remote: true %>
			<%= link_to "Not Yet", orders_url(@order), class: "landing-button secondary", id: "submit-close" %>
		</div><!--/.small-12-->
	</div><!--/.row-->
<% end %>