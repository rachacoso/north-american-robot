<% case @search_type
	when 'general_search' %>
		$('#orders-search-input-general').css({ "background-color": "yellow", "border": "1px solid black" });
	<% else %>
		$('#orders-search-input-general').css({ "background-color": "", "border": ""});
<% end %>

<% @filters.each do |filter, value| %>
	<% if filter == "buyers"  %>
		<% if value.present? %>
			$('#_filtersbuyers').css({ "background-color": "yellow", "border": "1px solid black" });
		<% else %>
			$('#_filtersbuyers').css({ "background-color": "", "border": ""});
		<% end %>
	<% end %>
	<% if filter == "products" %>
		<% if value.present? %>
			$('#_filtersproducts').css({ "background-color": "yellow", "border": "1px solid black" });
		<% else %>
			$('#_filtersproducts').css({ "background-color": "", "border": ""});
		<% end %>
	<% end %>
	<% if filter == "fulfillment" %>
		<% if value.present? %>
			$('#_filtersfulfillment').css({ "background-color": "yellow", "border": "1px solid black" });
		<% else %>
			$('#_filtersfulfillment').css({ "background-color": "", "border": ""});
		<% end %>
	<% end %>
	<% if filter == "status" %>
		<% if value.present? %>
			$('#_filtersstatus').css({ "background-color": "yellow", "border": "1px solid black" });
		<% else %>
			$('#_filtersstatus').css({ "background-color": "", "border": ""});
		<% end %>
	<% end %>
<% end %>

<% if @show_complete %>
	$('#show_completed').css({ "background-color": "yellow", "border": "1px solid black" });
<% else %>
	$('#show_completed').css({ "background-color": "", "border": ""});
<% end %>
		