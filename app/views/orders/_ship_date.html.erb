<%= form_for order, :html => {id: 'ship-date-form'}, remote: true, authenticity_token: true do |f| %>
	<% if order.ship_date %>
		<%= f.text_field :ship_date, label: "<small>Ship Date</small>".html_safe, value: order.ship_date.strftime("%m-%d-%Y"), placeholder: 'Ship Date' , class: "datepick ship-cancel" %>
	<% else %>
		<%= f.text_field :ship_date, label: "<small>Ship Date</small>".html_safe, value: DateTime.now.strftime("%m-%d-%Y"), placeholder: 'Ship Date', class: "datepick ship-cancel" %>
	<% end %>
	<%= f.submit "Add/Update Ship Date", class: "landing-button" %>
<% end %>