<%= render partial: 'shared/v2/header/main' %>
<%= render partial: 'shared/v2/header/marketplace' %>

<div class="row">
	<div class="medium-11 medium-centered columns">

		<div class="container marketplace">
			<% if @company_filter %>
			<%= render partial: "shared/v2/container/marketplace_lead", locals: {close_link: dashboard_url , subhead: "view #{get_company_type(@company_filter).downcase}"} %>
			<% else %>
			<%= render partial: "shared/v2/container/marketplace_lead", locals: {close_link: dashboard_url , subhead: "all orders"} %>
			<% end %>
			<div id="main-body">		

				<% if company = get_company(@company_filter) %>
				<%= render partial: "/shared/profile/components/profile_nav", locals: { profile: company, section: "orders"  } %>
				<% end %>


				<div class="row">
					<div class="small-12 columns">

							<div class="row">
								<div class="small-12 columns">
									<h2><strong>All <%= company = get_company(@company_filter) ? company.company_name : '' %> Orders</strong></h2>
								</div><!--/.small-12-->
							</div><!--/.row-->

						<div class="row">
							<div class="medium-2 columns">
								<%= render partial: "home/orders_chart", locals: { filter: @filter, company_id: @company_filter} %>
							</div><!--/.medium-2-->
							<div class="medium-10 columns">
									<%= render partial: 'order_index', locals: { orders: @orders } %>
							</div><!--/.medium-10-->
						</div><!--/.row-->

					</div><!--/.small-12-->
				</div><!--/.row-->

			</div><!--/#main-body-->
		</div><!--/#container-->

	</div><!--/.medium-11 medium-centered-->
</div><!--/.row-->
<%= render partial: 'shared/v2/footer/main' %>