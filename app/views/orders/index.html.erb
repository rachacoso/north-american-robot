<%= render partial: "shared/topbar" %>

<br>
<div class="row">
	<div class="small-11 small-centered columns">

		<div class="row">
			<div class="small-12 columns">

				<% if @company_filter %>
				<div class="text-center" id="profile-tabs">
				<span id="view-orders-buttons"><%= render partial: "shared/profile/components/view_orders_buttons", locals: {profile: get_company(@company_filter)} %></span>
				</div>
				<br>
				<% else %>
				<div id="dashboard-marketplace-header">
					<%#= image_tag "logo_header_marketplace.svg" %>
				</div>

				<div class="row">
					<div class="small-12 columns">
						<div class="panel">
							<h2>All Orders</h2>
						</div>
					</div><!--/.small-12-->
				</div><!--/.row-->
				<% end %>
				<div class="row">
					<div class="medium-2 columns">
						<%= render partial: "home/orders_chart", locals: { filter: @filter, company_id: @company_filter} %>
					</div><!--/.medium-2-->
					<div class="medium-10 columns">
							<%= render partial: 'order_index', locals: { orders: @orders } %>
					</div><!--/.medium-10-->
				</div><!--/.row-->

			</div><!--/.small-12-->
		</div><!--/.row-->

	</div><!--/.small-11-->
</div><!--/.row-->


<%= render partial: 'shared/v2/footer/main' %>