<% if @order.status == "submitted" %>
	$('#order-item-data').html("<div class='text-center'><h2>Thanks! Your change requests have been sent...<br>Please Wait...</h2></div>");
	window.location.replace("<%= order_url(@order) %>");
<% elsif flash[:notice] %>
	$('#order-item-data').html("<div class='text-center'><h3>Sorry, there was an error, please try again.</h3><hr><p><%= flash[:notice] %></p></div>");
	$('.overlay#order-item-overlay').fadeIn();
	$('#order-item').fadeIn();
<% else %>
	$('#order-item-data').html("<%= j (render partial: 'decline_approval_order', locals: {order: @order}) %>");
	$('.overlay#order-item-overlay').fadeIn();
	$('#order-item').fadeIn();
<% end %>

setModalActions();