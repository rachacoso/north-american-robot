

<% if @current_user.company_type == "Brand" && order.status == "open" %>
	<%= render partial: "orders/showfull/open_brand", locals: {order: order} %>
<% elsif @current_user.company_type == "Brand" && order.status == "submitted" %>
	<%= render partial: "orders/showfull/submitted_brand", locals: {order: order} %>
<% elsif @current_user.company_type == "Brand" && order.status == "pending" %>
	<%= render partial: "orders/showfull/pending_brand", locals: {order: order} %>
<% elsif @current_user.company_type == "Brand" && order.status == "approved" %>
	<%= render partial: "orders/showfull/approved_brand", locals: {order: order} %>
<% elsif @current_user.company_type != "Brand" && order.status == "open" %>
	<%= render partial: "orders/showfull/open_orderer", locals: {order: order} %>
<% elsif @current_user.company_type != "Brand" && order.status == "submitted" %>
	<%= render partial: "orders/showfull/submitted_orderer", locals: {order: order} %>
<% elsif @current_user.company_type != "Brand" && order.status == "pending" %>
	<%= render partial: "orders/showfull/pending_orderer", locals: {order: order} %>
<% elsif @current_user.company_type != "Brand" && order.status == "approved" %>
	<%= render partial: "orders/showfull/approved_orderer", locals: {order: order} %>
<% end %>


