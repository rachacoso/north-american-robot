<% if @current_user.company_type == "Brand" %>
	<div class="row">
		<div class="small-12 columns">
			<div class="text-center" id="profile-tabs">
				<ul class="tablist">
					<li><%= link_to "#{order.orderer_type.upcase} PROFILE", eval("view_#{order.orderer_type.downcase}_url(order.orderer)") %></li>
					<li class="active"><%= link_to "ORDERS", order_url(order) %></li>
				</ul>
			</div>
			<div id="profile-status-and-contact">
				<div class="row">
					<div class="medium-6 columns text-left">
						<%= render partial: "shared/profile/components/profile_status", locals: { order: order } %>
					</div><!--/.medium-6-->
					<div class="medium-6 columns text-right">
						<h3>Have questions? <%= link_to "Contact #{order.orderer.company_name}", new_simple_message_url(order.orderer), remote:true %></h3>
					</div><!--/.medium-6-->
				</div><!--/.row-->
			</div>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="medium-8 columns">
			<span id="profile-company-name">
			<h1><%= order.orderer.company_name %></h1>
			</span>
		</div><!--/.medium-8-->
		<div class="medium-4 columns text-right">
			<% if order.orderer.logo_file_name %>
				<%= image_tag order.orderer.logo.url(:medium), alt: "Logo" %><br>
			<% else %>
				<% if !order.orderer.facebook.blank? && fb_picture(order.orderer.facebook) %>
					<%= image_tag fb_picture(order.orderer.facebook) %><br>
				<% else %>
					<%= image_tag order.orderer.logo.url(:medium), width: "100", height: "100", alt: "Logo" %><br>
				<% end %>
			<% end %>
		</div><!--/.medium-4-->
	</div><!--/.row-->
	<%= render partial: "orders/showfull/#{order.status}_brand", locals: {order: order} %>
<% elsif @current_user.company_type != "Brand" %>
	<div class="row">
		<div class="small-12 columns">
			<div class="text-center" id="profile-tabs">
				<ul class="tablist">
					<li><%= link_to "BRAND PROFILE", eval("view_brand_url(order.brand)") %></li>
					<li class="active"><%= link_to "ORDERS", order_url(order) %></li>
				</ul>
			</div>
			<div id="profile-status-and-contact">
				<div class="row">
					<div class="medium-6 columns text-left">
						<%= render partial: "shared/profile/components/profile_status", locals: { order: order } %>
					</div><!--/.medium-6-->
					<div class="medium-6 columns text-right">
						<h3>Have questions? <%= link_to "Contact #{order.brand.company_name}", new_simple_message_url(order.brand), remote:true %></h3>
					</div><!--/.medium-6-->
				</div><!--/.row-->
			</div>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="medium-8 columns">
			<span id="profile-company-name">
			<h1><%= order.brand.company_name %></h1>
			</span>
		</div><!--/.medium-8-->
		<div class="medium-4 columns text-right">
			<% if order.brand.logo_file_name %>
				<%= image_tag order.brand.logo.url(:medium), alt: "Logo" %><br>
			<% else %>
				<% if !order.brand.facebook.blank? && fb_picture(order.brand.facebook) %>
					<%= image_tag fb_picture(order.brand.facebook) %><br>
				<% else %>
					<%= image_tag order.brand.logo.url(:medium), width: "100", height: "100", alt: "Logo" %><br>
				<% end %>
			<% end %>
		</div><!--/.medium-4-->
	</div><!--/.row-->
	<%= render partial: "orders/showfull/#{order.status}_orderer", locals: {order: order} %>
<% end %>