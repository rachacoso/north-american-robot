<% if @order.status == "completed" %>
	<div class="row">
		<div class="small-12 columns text-center">
			<h3>You have set this order to <strong><%= @order.brand.company_name %></strong> as PAID &amp; COMPLETED</h3>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="small-12 columns text-center">
			<%= link_to "OK", order_url(@order), class: "landing-button", id: "submit-close" %>
		</div><!--/.small-12-->
	</div><!--/.row-->
<% else %>
	<div class="row">
		<div class="small-12 columns text-center">
			<h2>Have you received payment and are you ready to close this order?</h2>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="small-12 columns text-center">
			<%= link_to "Yes", armor_disabled_completed_order_url(@order,1), class: "landing-button", remote: true %>
			<%= link_to "Not Yet", order_url(@order), class: "landing-button secondary", id: "submit-close" %>
		</div><!--/.small-12-->
	</div><!--/.row-->
<% end %>