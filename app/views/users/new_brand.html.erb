<%= render partial: 'shared/v2/header/main' %>

<div class="front-top-panel">
	<div class="row">
		<div class="medium-11 medium-centered columns">
			<div id="new-user-intro">
				<div class="row">
					<div class="medium-6 columns">
					<h1>Hello, Brands!</h1>
					<div id="new-brand-carousel" class="owl-carousel">
						<div>
							<h2>Get your products placed in the industry’s best beauty retailers. <strong>Join our online marketplace!</strong></h2>
							<h2><strong>$600/year for verified brands.</strong></h2>
						</div>
						<div id="new-user-intro">
							<h2>Benefits of Joining</h2>
							<ul id="benefits">
								<li>Allows all of our buyers and retail partners to place orders for your products</li>
								<li>Gets eyes on your brand and products for a low cost</li>
								<li>Gives you access to our library of international business guides</li>
								<li>Unlocks monthly emails ensuring you’re on the right track to getting your products into new U.S. retailers</li>
							</ul>
						</div>
						<div id="new-user-intro">
							<h2>Our Retail Partners</h2>
							<div class="row">
								<div class="small-12 columns">
									<ul class="small-block-grid-2 medium-block-grid-3" style="margin-top: 20px;">
									<li><%= image_tag "https://s3.amazonaws.com/landingintl-us/general/logo-ulta.png" %></li>
									<li><%= image_tag "https://s3.amazonaws.com/landingintl-us/general/logo-nordstrom.png" %></li>
									<li><%= image_tag "https://s3.amazonaws.com/landingintl-us/general/logo-urbanoutfitters.png" %></li>
									<li><%= image_tag "https://s3.amazonaws.com/landingintl-us/general/logo-freepeople.png" %></li>
									<li><%= image_tag "https://s3.amazonaws.com/landingintl-us/general/logo-forever21.png" %></li>
									<li><%= image_tag "https://s3.amazonaws.com/landingintl-us/general/logo-belk.png" %></li>
									<li><%= image_tag "https://s3.amazonaws.com/landingintl-us/general/logo-rickys.png" %></li>
									<li><%= image_tag "https://s3.amazonaws.com/landingintl-us/general/logo-peninsula.png" %></li>
									<li><%= image_tag "https://s3.amazonaws.com/landingintl-us/general/logo-beautycollection.png" %></li>
									<li><%= image_tag "https://s3.amazonaws.com/landingintl-us/general/logo-walgreens.png" %></li>
									</ul>
								</div><!--/.small-12-->
							</div><!--/.row-->
						</div><!--/.new-user-intro -->
					</div>
					<h3>Contact us for assistance any time at <a mailto="info@landingintl.com" style="color:black;">info@landingintl.com</a></h3>

					</div><!--/.medium-8-->
					<div class="medium-6 columns">
						<div class="ldpanel" id="sign-up">
							<h2>Join Us</h2>
							<h3><strong>$600/year for verified brands</strong></h3>
							<br>
							<div class="row">
								<div class="medium-12 columns text-right">
									
									<%= form_for @newuser, url: users_path do |f| %>
									<%= hidden_field_tag "user_type", "brand" %>
									<%= parse_errors(@newuser.errors) %>
									<div class="row collapse">
										<%= f.fields_for :company do |ff| %>
											<%= ff.text_field :company_name, :placeholder => 'COMPANY NAME', :value => @company_name, :label => false   %>
											<%= ff.text_field :website, :placeholder => 'COMPANY WEBSITE', :value => @website, :label => false   %>
										<% end %>
										<hr>
										<%= f.fields_for :contact do |ff| %>
										<div class="medium-6 columns">
											<%= ff.text_field :firstname, :placeholder => 'FIRST NAME', :value => @user_firstname, :label => false  %>
										</div>
										<div class="medium-6 columns">
											<%= ff.text_field :lastname, :placeholder => 'LAST NAME', :value => @user_lastname, :label => false  %>
										</div>
										<% end %>
										<div class="medium-12 columns">
										<%= f.text_field :email, :placeholder => 'EMAIL (will be used as your login)', :value => @user_email, :label => false %>
										</div>
										<hr>
										<div class="medium-12 columns">
										<%= f.password_field :password, :placeholder => 'PASSWORD', :label => false %>
										</div>
										<div class="medium-12 columns">
										<%= f.password_field :password_confirmation, :placeholder => 'PASSWORD (repeat)', :label => false %>
										</div>
										<div class="medium-12 columns">
											<br>
											<%= recaptcha_tags %>
											<br>
											<%= f.submit "JOIN!", class: "landing-button" %>
										</div>
									</div>
									<% end %>
								</div>
							</div>
						</div>
					</div><!--/.medium-6-->
				</div><!--/.row-->
			</div><!--/ .new-user-intro -->
		</div><!--/.medium-10-->
	</div><!--/.row-->
</div><!--/.front-top-panel-->

<%= render partial: 'shared/v2/footer/main' %>