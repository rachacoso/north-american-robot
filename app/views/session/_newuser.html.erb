<% content_for :javascript_foot do %>
  <%= javascript_tag do %>
		$(document).ready(function() {
			<% if confirmed %>
			showModal("<%= j (render partial: 'shared/newusers/email_confirmed_modal', locals: { email: email }) %>");
			<% else %>
			showModal("<%= j (render partial: 'shared/newusers/new_user_modal', locals: { email: email }) %>");
			<% end %>
		});
  <% end %>
<% end %>