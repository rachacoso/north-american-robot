<p>
	<%= link_to admin_order_view_url(order) do %>
		<% if group_type == "r" || group_type == "d" %>
			<%= order.brand.company_name %>
		<% else %>
			<%= order.orderer.company_name %>
		<% end %>
	<% end %>
	<%= order.c_at.in_time_zone("Pacific Time (US & Canada)").strftime("(created on %e %b %Y %H:%M:%S%p %Z)") %>
</p>