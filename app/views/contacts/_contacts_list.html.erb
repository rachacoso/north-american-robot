		<div class="contacts-table">
		&nbsp;
		</div>
	</div><!--/.medium-2-->
</div><!--/.row-->

<% b_or_d.contacts.each do |contact| %>
<div class="row collapse contact-view" id="contact-view-<%=contact.id%>">
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%= contact.firstname.blank? ? "(nameless)" : "#{contact.firstname}".html_safe %>
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%= contact.lastname.blank? ? "(nameless)" : "#{contact.lastname}".html_safe %>
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%= contact.title.blank? ? "(no title)" : "#{contact.title}".html_safe %>
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%= contact.email.blank? ? "(no email)" : "#{contact.email}<br>".html_safe %>
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%= contact.phone.blank? ? "(no phone)" : "#{contact.phone}<br>".html_safe %>
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%= link_to "edit", "#", class: "itemformlink contact-edit-link", data: {link: "#{contact.id}"} %>
			<% if b_or_d.contacts.count > 1 %>
				<%= link_to 'delete', contact_url(contact), :method => 'delete', :remote => true, data: { :confirm => 'Are you sure you want to delete this contact?'}, class: "itemformlink" %>
			<% end %>			
		</div>
	</div><!--/.medium-2-->
</div><!--/.row-->

<%= form_for contact, remote: true do |f| %>
<div class="row collapse contact-edit" id="contact-edit-<%=contact.id%>">
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%= f.text_field :firstname, label: false, placeholder: "First Name" %>
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%= f.text_field :lastname, label: false, placeholder: "Last Name"%>
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%= f.text_field :title, label: false, placeholder: "Title" %>
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%= f.text_field :email, label: false, placeholder: "Email" %>
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%= f.text_field :phone, label: false, placeholder: "Phone" %>
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table item">
			<%#= f.submit "UPDATE", class: "button tiny alert" %>
			<%= link_to "UPDATE", "#", class: "itemformlink contact-update-submit", data: {link: "#{contact.id}"} %>
			<%= link_to "cancel", "#", class: "itemformlink contact-edit-link", data: {link: "#{contact.id}"} %>
		</div>
	</div><!--/.medium-2-->
</div><!--/.row-->
<% end %>

<% end %>


