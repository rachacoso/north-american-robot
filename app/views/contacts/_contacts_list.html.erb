

<div class="row collapse">
<div class="small-12 columns">
	

<div class="row collapse">
	<div class="medium-2 columns">
		<div class="contacts-table">
			First Name
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table">
		Last Name
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table">
		Title
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table">
		Email
		</div>
	</div><!--/.medium-2-->
	<div class="medium-2 columns">
		<div class="contacts-table">
		Phone
		</div>
	</div><!--/.medium-2-->
