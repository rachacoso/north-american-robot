<%= render partial: 'shared/v2/header/main' %>

<div class="brandindex-top">


	<div class="row">
		<div class="medium-11 medium-centered columns">
			<div class="container marketplace">

				<div id="lead">
					<div id="title">MARKETPLACE <span id="sub">Search Results</span></div><div id="close"><%= link_to root_url do %><%= image_tag "/images/close.svg"%><% end %></div>
				</div><!--/#lead-->

				<div id="main-body">



				<div class="filtered-results">
				
				<div class="row">
					<div class="small-11 small-centered columns small-text-center medium-text-left">
					<h3>Your search: <strong><%= @query %></strong></h3><br>	
					<% if @searchresults.blank? %>
						<h3>No Brands</h3>
					<% else %>
						
						<ul class="small-block-grid-1 medium-block-grid-4 large-block-grid-5">
							<% @searchresults.each do |b| %>
								<li>
								<%= render partial: "index_item_filtered", locals: {brand: b} %>
								</li>
							<% end %>
						</ul>
					<% end %>
					</div>
				</div>
				</div>

				</div><!--/#main-body-->
			</div><!--/#container-->

		</div><!--/.medium-11 medium-centered-->
	</div><!--/.row-->

</div><!--/.brandindex-top-->

<%= render partial: 'shared/v2/footer/main' %>