<%= render partial: 'shared/v2/header/main' %>
<%#= render partial: 'shared/v2/header/sub_beauty' %>

<div class="row">
	<div class="small-12 columns">

		<nav class="breadcrumbs">
		  <a href="#">Beauty</a>
		  <a class="current" href="#">Find</a>
		</nav>

		<h1>BEAUTY BRANDS by TREND / RETAILER / CATEGORY / ALL</h1>

	</div><!--/.small-12-->
</div><!--/.row-->


<div class="row">
	<div class="small-11 small-centered columns">

		<%= @brands.count %>
		<div id="owl-example" class="owl-carousel owl-theme">
		<% @brands.each do |b| %>
			<div><%= render partial: "index_item", locals: {brand: b} %></div>
		<% end %>
		</div>

		
	</div><!--/.small-11 small-centered-->
</div><!--/.row-->

<% content_for :javascript_foot do %>
  <%= javascript_tag do %>
		$(document).ready(function() {
		  $("#owl-example").owlCarousel({
				//Lazy load
				lazyLoad : true,
				lazyFollow : true,
				lazyEffect : "fade",
				navigation: true,
				navigationText: [
					"<img src='images/v2/left-arrow.svg'>",
					"<img src='images/v2/right-arrow.svg'>",
				],
				items : 6,
				pagination: false
			});
		});
  <% end %>
<% end %>