<%= form_for @brand, url: brand_url do |f| %>
	<%= f.hidden_field :company_name %>
	<%= hidden_field_tag "redirect_anchor", "a-trends" %>

	<div class="row">
		<div class="small-12 columns">
			<a class="anchor" id="a-trends"></a>
			<h1>Trends</h1>
		</div>
	</div>

	<div class="row editform">
		<div class="medium-10 push-2 columns">
			<% Trend.each do |t| %>
				<%= check_box_tag "trends[#{t.id}]", t.id, (@brand.trends.find(t) rescue false) ? true : false  %>
				<%= label_tag "trends[#{t.id}]" do %>
					<%= t.name %>
				<% end %>								
		  <% end %>
		</div>
	</div>

	<div class="row">
		<div class="medium-10 push-2 columns">
			<%= f.submit 'Update Trends', class: "tiny radius alert button right" %>
		</div>
	</div>
<% end %>