											<%= link_to "Channel Capacities", "#a-channelcapacity", class: "profile-edit-links" %><br>
											<%= link_to "Countries of Distribution", "#a-exportcountries", class: "profile-edit-links" %><br>
											<hr>
											<h2>Show Off Your Brand</h2>
											<%= link_to "Press Hits", "#a-press-hits", class: "profile-edit-links" %><br>
											<%= link_to "Tradeshows", "#a-tradeshows", class: "profile-edit-links" %><br>
											<%= link_to "Patents", "#a-patents", class: "profile-edit-links" %><br>
											<%= link_to "Trademarks", "#a-trademarks", class: "profile-edit-links" %><br>
											<%= link_to "Business Certifications / Regulatory Compliance", "#a-business-certifications", class: "profile-edit-links" %><br>
											<%= link_to "Social Ethos &amp; Impact".html_safe, "#a-social-fields", class: "profile-edit-links" %>
