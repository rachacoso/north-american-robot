											<hr>
											<h2>Boost Your Profile</h2>
											<%= link_to "Trends", "#a-trends", class: "profile-edit-links" %><br>
											<%= link_to "Global Good Tags", "#a-social-tags", class: "profile-edit-links" %><br>
