
<%= render partial: "shared/topbar" %>

<div class="row">
	<div class="medium-11 medium-centered columns">
		<div class="container marketplace">
			<div id="lead">
				<div id="title">MARKETPLACE <span id="sub">Profile Settings</span></div><div id="close"><%= link_to dashboard_url do %><i class="fi-x"></i><% end %></div>
			</div><!--/#lead-->
			<div id="main-body">

				<div id="edit-profile-nav">
					<div id="top">
						<div class="row">
							<div class="medium-6 columns">
								<h1>Your Profile</h1>
								Complete your brand profile so your potential  partners can learn about you and be better matched to you and your customer base.
							</div><!--/.medium-6-->
							<div class="medium-6 columns">
								<div class="row">
									<div class="small-12 columns" id="profile-completeness">					
										<div class="row">
											<div class="small-12 columns text-center">
												<% percent = check_brand_full_profile(@profile) %>
												<div class="progress small-12 round <%= percent == 100 ? "success" : "" %>" style="margin: auto;">
												  <span class="meter" style="width: <%= percent %>%"></span>
												</div>
												<small>Your Full Profile is <%= percent == 100 ? "" : "#{percent}%" %> Complete!</small>
											</div>
										</div>
									</div>
								</div><!--/.row-->
							</div><!--/.medium-6-->
						</div><!--/.row-->
					</div>
					<div id="bottom">
						<div class="row">
							<div class="small-12 columns text-left" id="nav">
								<ul class="navlist" id="left">
									<li><%= link_to 'EDIT Profile', brand_url %></li>
									<li class="active"><%= link_to 'PREVIEW Profile', brand_full_profile_url %></li>
								</ul>
							</div><!--/.small-12-->
						</div><!--/.row-->
					</div><!--/.bottom-->
				</div><!--/.edit-profile-nav-->

				<br>
				<div class="row collapse">
					<div class="small-12 columns" id="settings-preview-top">
						<h2 style="margin-bottom: 0;">Public Profile Preview</h2>
					</div><!--/.small-12 small-centered-->
				</div><!--/.row-->
				<div class="row collapse">
					<div class="small-12 columns" id="settings-preview-bottom">

						<div class="row">
							<div class="medium-11 medium-centered columns">

								<div class="profile-preview" id="settings-preview">
								  <div id="profile-preview-data">
								  	<%= render partial: "preview", locals: {profile: @profile, gallery: @gallery} %>
								  </div>
								</div>

							</div><!--/.medium-11 medium-centered-->
						</div><!--/.row-->

					</div>
				</div>

				<br>
				<div class="row collapse">
					<div class="small-12 columns" id="settings-preview-top">
						<h2 style="margin-bottom: 0;">Full Profile Preview</h2>
					</div><!--/.small-12 small-centered-->
				</div><!--/.row-->
				<div class="row collapse">
					<div class="small-12 columns" id="settings-preview-bottom">
						<div class="row">
							<div class="medium-11 medium-centered columns">

								<%= render partial: "/shared/profile/brand_full_profile", locals: {profile: @profile} %>
								<br><br>
							</div><!--/.medium-11 medium-centered-->
						</div><!--/.row-->

					</div>
				</div>


			</div><!--/#main-body-->
		</div><!--/#container-->
	</div><!--/.medium-11 medium-centered-->
</div><!--/.row-->


<% content_for :javascript_foot do %>
	<%= javascript_tag do %>
		$(document).ready(function() {
			$("#profile-preview-carousel").owlCarousel({
				lazyLoad : true,
				lazyFollow : true,
				lazyEffect : "fade",
				navigation : true,
				navigationText : [
					"<img src='/images/v2/left-arrow.svg'>",
					"<img src='/images/v2/right-arrow.svg'>",
				],
				items : 4,
				pagination : false,
				scrollPerPage : false,
			});
		});
	<% end %>
<% end %>