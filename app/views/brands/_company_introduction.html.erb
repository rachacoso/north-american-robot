<div class="row">
	<div class="small-12 columns">
		<a class="anchor" id="a-company-introduction"></a>
		<h1>Company Introduction <br><small>Introduce yourself to potential partners with a short (50-100 words) description.</small></h1>
		<% text_length = 500 - @brand.brand_positioning.length %>
		<h4><span id="company-info-feedback"><%= text_length < 0 ? text_length * -1 : text_length %> <%= text_length < 0 ? "characters over" : "characters remaining" %></span></h4>
	</div>
</div>
<div class="row">
	<%= form_for @brand, url: brand_url do |f| %>
	<%= hidden_field_tag "redirect_anchor", "a-company-introduction" %>
		<div class="small-12 columns">
			<%= f.text_area :brand_positioning, rows: 10, label: false, placeholder: 'Company Introduction' %>
			<%= f.submit 'Update Marketing Activities', class: "tiny radius alert button right" %>
		</div>
	<% end %>
</div>