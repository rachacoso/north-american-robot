<% if @messages && @current_user.subscriber? %>

	<% match = this_match(profile) %>

	<% content_for :javascript_head do %>
		<%= javascript_tag do %>
			conversationStage = "<%= @stage %>";
		<% end %>
	<% end %>

	<% content_for :javascript_foot do %>
		<%= javascript_tag do %>
			initConversations();
		<% end %>
	<% end %>

<div class="row collapse">
	<div class="small-12 columns">
		<div class="profile-container">

			<div class="row collapse">
				<div class="medium-3 columns text-center">
					<div id="conversation-map-contact" class="<%= contact_stage_indicator(match, "contact") %>"><h1><%= link_to 'CONTACT', match_stage_view_url(match, 'contact'), style: "color:black;", remote: true %></h1></div>
				</div><!--/.medium-5-->
				<div class="medium-3 columns text-center">
					<div id="conversation-map-propose" class="<%= contact_stage_indicator(match, "propose") %>"><h1><%= link_to 'PROPOSE', match_stage_view_url(match, 'propose'), style: "color:black;", remote: true %></h1></div>
				</div><!--/.medium-5-->
				<div class="medium-3 columns text-center">
					<div id="conversation-map-prepare" class="<%= contact_stage_indicator(match, "prepare") %>"><h1><%= link_to 'PREPARE', match_stage_view_url(match, 'prepare'), style: "color:black;", remote: true %></h1></div>
				</div><!--/.medium-5-->
				<div class="medium-3 columns text-center">
					<div id="conversation-map-order" class="<%= contact_stage_indicator(match, "order") %>"><h1><%= link_to 'ORDER', match_stage_view_url(match, 'order'), style: "color:black;", remote: true %></h1></div>
				</div><!--/.medium-5-->
			</div><!--/.row-->

			<!--CONVERSATION MAP SUBHEAD start-->
			<div class="row collapse conversation-map-subhead">
				<%= render partial: "matches/conversation/conversation_#{@stage}_subhead" %>
			</div><!--/.row-->
			<!--CONVERSATION MAP SUBHEAD end-->

			<div class="row" id="conversation-wrapper">
			
				<div class="small-2 columns conversation-left-info-column">
					<div id="conversation-info">
						<%= render partial: "matches/conversation/conversation_#{@stage}_info", locals: {match: match, profile: profile} %> 
					</div>
				</div><!--/.medium-4-->
				<div class="small-7 columns conversation-right-message-column">
						<div id="conversation-message-block">
							<%= render partial: "matches/conversation_message_block", locals: {match: match, stage: @stage} %>
						</div>
				</div><!--/.medium-8-->
				<div class="small-3 columns">
					<div id="conversation-action">
						<%= render partial: "matches/conversation/conversation_#{@stage}_action", locals: {match: match, profile: profile} %> 
					</div>
				</div>
			</div>

		</div>
	</div><!--/.small-12-->
</div><!--/.row-->

<% end %>
