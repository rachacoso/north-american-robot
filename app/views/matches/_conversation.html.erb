<% if @messages && @current_user.subscriber? %>

					<% match = this_match(profile) %>

					<% content_for :javascript_foot do %>
						<%= javascript_tag do %>
							$('#conversation-info-<%= get_conversation_stage(this_match(profile)) %>').show();
							$('#conversation-<%= get_conversation_stage(this_match(profile)) %>').show();
						<% end %>
					<% end %>

				<div class="row">
					<div class="small-11 small-centered columns">
		

					<div class="profile-container">

						<div class="profile-header text-center">
							<h1>YOUR CONVERSATION with <strong><%=profile.company_name %></strong></h1>
						</div>

						<div class="row collapse">
						<div class="row">
							<div class="small-12 columns text-center">
								<% if i_contacted(match) %>
									<% if !match.messages.blank? %>
										<h4>You started a conversation with <strong><%= profile.company_name %></strong><span data-tooltip aria-haspopup="true" class="has-tip radius" title="IN CONVERSATION<BR> <SMALL>YOU CONTACTED THEM</SMALL>"><%= image_tag "match_profile_icons_conversation_outgoing.svg" %></span></h4>
									<% else %>
										<h4><span data-tooltip aria-haspopup="true" class="has-tip radius" title="AWAITING THEIR RESPONSE<BR> <SMALL> CONTACTED ON <%= match.c_at.strftime("%d %B %Y").upcase %></SMALL>">
							<%= image_tag "match_profile_icons_waiting.svg" %></span>You have requested a conversation with <strong><%= profile.company_name %></strong> and are awaiting a response</h4>
									<% end %> 								
								<% else %>
									<% if !match.messages.blank? %>
									<h4><span data-tooltip aria-haspopup="true" class="has-tip radius" title="IN CONVERSATION<BR> <SMALL>THEY CONTACTED YOU</SMALL>"><%= image_tag "match_profile_icons_conversation_incoming.svg" %></span><strong><%= profile.company_name %></strong> started a conversation with you</h4>
									<% else %>
									<h4><span data-tooltip aria-haspopup="true" class="has-tip radius" title="NEW CONTACT REQUEST">
						<%= image_tag "match_profile_icons_newrequest.svg" %></span><strong><%= profile.company_name %></strong> would like to have a conversation with you</h4>
									<% end %>
								<% end %>
							</div>
						</div>

							<div class="small-12 columns conversation-header active">
								<div class="medium-5 hide-for-small-only columns">
										&nbsp;
								</div><!--/.medium-5-->
