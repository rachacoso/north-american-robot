<% unless @messages_unread > 0 || @new_contact_messages > 0 %>
	$('#unread-message-badge').fadeOut(500)
	$('#unread-message-badge-divider').fadeOut(500)
<% end %>	 

<% if @messages %>
	<% conversation_action_partial = "matches/conversation/conversation_#{@stage}_action" %>
	<% conversation_message_block_partial = "matches/conversation_message_block" %>
	$('#conversation-action').hide().html("<%= j (render partial: conversation_action_partial, locals: {match: @m, profile: @profile}) %>").fadeIn(1000);
	$('#conversation-message-block').hide().html("<%= j (render partial: conversation_message_block_partial, locals: {match: @m, stage: @stage}) %>").fadeIn(1000);
	$('.overlay#action-two').hide();
	$('.conversation-action-tile#action-two').hide();
<% end %>

$(document).foundation();
$(document).foundation('tab', 'reflow');
$(document).foundation('topbar', 'reflow');
initConversations();


  