<div class="row collapse" style="background-color: white;">
	<div class="medium-8 columns">
		<%= render partial: "shared/profile/components/gallery", locals: {gallery: @gallery, profile: profile} %>
	</div><!--/.medium-8-->
	<div class="medium-4 text-left columns">

		<div class="tags-window previewtile">
			<div class="profile-container">
				<div class="profile-content">
					<div class="row">
						<div class="small-12 columns">

							<h1><%= profile.company_name %></h1>

								<% if profile.logo_file_name %>
									<%= image_tag profile.logo.url(:medium), alt: "Logo" %>
								<% else %>
									<% if !profile.facebook.blank? && fb_picture(profile.facebook) %>
										<%= image_tag fb_picture(profile.facebook) %>
									<% else %>
										<%= image_tag profile.logo.url(:medium), width: "100", height: "100", alt: "Logo" %>
									<% end %>					
								<% end %>
											<br>
							<% profile.tags.each do |tag| %>
								<span class="label"><%= tag.name %></span>
							<% end %>


							
							<%= render partial: "shared/profile/components/indicators", locals: {match: profile} %>
							

							<p>
							<%= simple_format(profile.brand_positioning) %>
							</p>
							
							<% unless profile.website.blank? %>
								<%= link_to "//#{clean_url(profile.website)}", target: "blank" do %> 
								<i class="fi-laptop" style="font-size: 3em;"></i> 
								<% end %>
							<% end %>
							<% unless profile.facebook.blank? %>
								<%#= !profile.website.blank? ? "/" : "" %>
								<%= link_to "//#{clean_url(profile.facebook)}", target: "blank" do %>
								<i class="fi-social-facebook" style="font-size: 3em;"></i> 
								<% end %>
							<% end %>
							<% unless profile.linkedin.blank? %>
								<%#= !profile.website.blank? || !profile.facebook.blank? ? "/" : "" %>
								<%= link_to "//#{clean_url(profile.linkedin)}", target: "blank" do %>
									<i class="fi-social-linkedin" style="font-size: 3em;"></i> 
								<% end %>
							<% end %>
							<% unless profile.twitter.blank? %>
								<%#= !profile.website.blank? || !profile.facebook.blank? || !profile.linkedin.blank? ? "/" : "" %>
								<%= link_to "//#{clean_url(profile.twitter)}", target: "blank" do %>
									<i class="fi-social-twitter" style="font-size: 3em;"></i> 
								<% end %>
							<% end %>
							<% unless profile.instagram.blank? %>
								<%#= !profile.website.blank? || !profile.facebook.blank? || !profile.linkedin.blank? || !profile.twitter.blank? ? "/" : "" %>
								<%= link_to "//#{clean_url(profile.instagram)}", target: "blank" do %>
									<i class="fi-social-instagram" style="font-size: 3em;"></i> 
								<% end %>
							<% end %>
						</div><!--/.small-12 -->
					</div><!--/.row -->
				</div><!--/.profile-container -->
			</div><!--/.profile-content -->

			<%= render partial: "shared/profile/components/general_info", locals: {profile: profile} %>

						
		</div><!-- /.tags-window previewtile-->
	</div><!--/.medium-3-->
</div><!--/.row-->

<br>

<%= render partial: "matches/conversation_start", locals: {profile: profile} %>

<div class="row collapse">
	<div class="small-12 columns">



				<div id="profile-conversation">
				<%= render partial: "matches/conversation", locals: {profile: profile} %>
				</div>


				<% if profile.products.where(current: true).length > 0 %>
				<div class="profile-container">
					<div class="profile-header">
						<h1>CURRENT PRODUCTS</h1>
					</div><!--.profile-header-->
					<div class="profile-content">

					<ul class="small-block-grid-1 medium-block-grid-3" data-equalizer>

					<% profile.products.where(current: true).order_by(:description.desc, :key_benefits.desc).each do |p| %>
						<li><%= render partial: "shared/collections_view/products", locals: {
							collitem: p
						} %></li>
					<% end %>
					</ul>

					</div><!--.profile-content-->
				</div><!--.profile-container-->
				<br>
				<% end %>


				<% if profile.products.where(current: false).length > 0 %>				
				<div class="profile-container">
					<div class="profile-header">
						<h1>UPCOMING PRODUCTS</h1>
					</div><!--.profile-header-->
					<div class="profile-content">

					<ul class="small-block-grid-1 medium-block-grid-3" data-equalizer>
					<% profile.products.where(current: false).order_by(:description.desc, :key_benefits.desc).each do |p| %>																
						<li><%= render partial: "shared/collections_view/products", locals: {
							collitem: p
						} %></li>
					<% end %>
					</ul>

					</div><!--.profile-content-->
				</div><!--.profile-container-->
				<br>
				<% end %>


				<% unless profile.brand_photos.blank? %>


				<div class="profile-container">
					<div class="profile-header">
						<h1>BRAND GALLERY</h1>
					</div><!--.profile-header-->
					<div class="profile-content">
				
						<div class="galleria-brand-photos">
							<% profile.brand_photos.each do |photo| %>
								<%= link_to photo.photo.url(:large) do %>
									<%= image_tag photo.photo.url(:small) %>
								<% end %>
					    <% end %>
							<% content_for :javascript_foot do %>
								<% javascript_tag do %>
								initializeGallery(".galleria-brand-photos")
								<% end %>
							<% end %>					    
						</div>



					</div><!--.profile-content-->
				</div><!--.profile-container-->
				<br>



				<% end %>

				<% if profile.press_hits.length > 0 %>
				<div class="profile-container">
					<div class="profile-header">
						<h1>PRESS CLIPS</h1>
					</div><!--.profile-header-->
					<div class="profile-content">

					<ul class="small-block-grid-1 medium-block-grid-3" data-equalizer>
					<% profile.press_hits.order_by(:date.desc).each do |p| %>
						<li><%= render partial: "shared/collections_view/press_hits", locals: {
							collitem: p
						} %></li>
					<% end %>
					</ul>

					</div><!--.profile-content-->
				</div><!--.profile-container-->
				<br>
				<% end %>


				<% if profile.trade_shows.length > 0 %>
				<div class="profile-container">
					<div class="profile-header">
						<h1>TRADE SHOWS</h1>
					</div><!--.profile-header-->
					<div class="profile-content">

						<ul class="small-block-grid-1 medium-block-grid-3" data-equalizer>
						<% profile.trade_shows.order_by(:date.desc).each do |p| %>
							<li><%= render partial: "shared/collections_view/trade_shows", locals: {
								collitem: p
							} %></li>
						<% end %>
						</ul>
													
					</div><!--.profile-content-->
				</div><!--.profile-container-->
				<br>
				<% end %>


				<% if profile.patents.length > 0 %>
				<div class="profile-container">
					<div class="profile-header">
						<h1>PATENTS</h1>
					</div><!--.profile-header-->
					<div class="profile-content">
					
					<ul class="small-block-grid-1 medium-block-grid-3" data-equalizer>
					<% profile.patents.order_by(:country.asc, :date.desc).each do |p| %>
						<li><%= render partial: "shared/collections_view/patents", locals: {
							collitem: p
						} %></li>
					<% end %>
					</ul>
													
					</div><!--.profile-content-->
				</div><!--.profile-container-->
				<br>
				<% end %>


				<% if profile.trademarks.length > 0 %>
				<div class="profile-container">
					<div class="profile-header">
						<h1>TRADEMARKS</h1>
					</div><!--.profile-header-->
					<div class="profile-content">
					
					<ul class="small-block-grid-1 medium-block-grid-3" data-equalizer>
					<% profile.trademarks.order_by(:country.asc, :date.desc).each do |p| %>
						<li><%= render partial: "shared/collections_view/trademarks", locals: {
							collitem: p
						} %></li>
					<% end %>
					</ul>

					</div><!--.profile-content-->
				</div><!--.profile-container-->
				<br>
				<% end %>


				<% if profile.compliances.length > 0 %>
				<div class="profile-container">
					<div class="profile-header">
						<h1>BUSINESS CERTIFICATIONS</h1>
					</div><!--.profile-header-->
					<div class="profile-content">

					<ul class="small-block-grid-1 medium-block-grid-3" data-equalizer>
					<% profile.compliances.order_by(:country.asc, :date.desc).each do |p| %>
						<li><%= render partial: "shared/collections_view/compliances", locals: {
							collitem: p
						} %></li>
					<% end %>
					</ul>

					</div><!--.profile-content-->
				</div><!--.profile-container-->
				<% end %>


	</div><!--/.small-11 small-centered-->
</div><!--/.row-->

		
<%# set default product photo %>
<% content_for :javascript_foot do %>
	<%= javascript_tag do %>
	  $(".brand-default").backstretch([
		<% profile.sectors.each do |sector| %>
			"/images/SECTORS_<%= sector.name.gsub(/\s+/, "").gsub(/\//, "").downcase %>.svg",
		<% end %>
	   ], {duration: 3000, fade: 750});
	<% end %>
<% end %>

