<div id="profile-restricted-view">
	<div class="row">
		<div class="small-12 columns text-center">
			<%= link_to root_url do %><%= image_tag 'https://s3.amazonaws.com/landingintl-us/general/landing-logo.png', width: "100", alt: "Landing International" %><% end %>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="medium-10 medium-centered columns text-center">
			<div id="copy">
			<h2>
				Please log-in to access premium brand profiles with product information and ordering options.
			</h2>


			<h3><strong>Free to join for retailers and distributors.<br> <%= link_to "/users/new?t=brand", target: "blank" do %>$600/year for verified brands. <% end %></strong></h3>

			</div>
		</div><!--/.medium-9 -->
	</div><!--/.row-->
	<div class="row">
		<div class="small-12 columns">
			<br>
		</div><!--/.small-12-->
	</div><!--/.row-->
	<div class="row">
		<div class="small-5 columns text-right">
			<%= link_to "LOG IN", login_url, remote: true, class: "action-link" %>
			<h3>I already have an account</h3>
		</div><!--/.small-5-->
		<div class="small-2 columns text-center">
			<h3>OR</h3>
		</div><!--/.small-2-->
		<div class="small-5 columns text-left">
			<%= link_to "JOIN", new_user_url, class: "action-link", remote: true %>
			<h3>I need to get an account</h3>
		</div><!--/.small-5-->
	</div><!--/.row-->
	<div class="row">
		<div class="medium-7 medium-centered columns">
			<div id="login-form"></div>
		</div><!--/.medium-7 -->
	</div><!--/.row-->
</div><!--/.profile-restricted-view-->