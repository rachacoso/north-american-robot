<div class="row">
	<div class="small-12 columns">
		<table class="order" style="margin: auto;">
			<thead>
				<th>Item</th>
				<th>Description</th>
				<th>Quantity</th>
				<th>MSRP</th>
				<th>Unit Price</th>
				<th>Amount</th>
			</thead>
			<tbody>
				<% get_sorted_order_items(@order).each do |lineitem, product| %>
				<tr>
					<td><%= product.item_id.present? ? "#{product.item_id}" : "&nbsp;".html_safe %></td>
					<td><%= @order.status == "submitted" ? product.name : (link_to product.name, new_order_item_url(product.id), remote: true) %> </td>
					<td><%= @order.status == "submitted" ? lineitem.quantity : (link_to lineitem.quantity, new_order_item_url(product.id), remote: true) %></td>
					<td><%= number_to_currency(product.price_in_dollars) %></td>
					<td><%= number_to_currency(product.tiered_price_in_dollars) %></td>
					<td><%= number_to_currency(lineitem.total_price) %></td>
				</tr>
				<% end %>
				<tr id="total">
					<td colspan="5" class="text-right">Subtotal <small>(before taxes/fees/shipping)</small></td>
					<td><%= number_to_currency(@order.total_price) %></td>
				</tr>
			</tbody>
		</table>
	</div><!--/.small-12-->
</div><!--/.row-->