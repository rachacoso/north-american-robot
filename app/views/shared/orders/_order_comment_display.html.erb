<% additional_comments ||= [] %>
<div class="order-comment-display">
	<div id="comment-title">
		comments
	</div>
	<div id="comment-body">
		<%= simple_format(comment.text, {}, wrapper_tag: "div") %>
	</div>

	<% additional_comments.each do |comment| %>
	<div id="comment-body">
		<%= simple_format(comment.text, {}, wrapper_tag: "div") %>
		[ comment added by <%= comment.author == "brand" ? comment.commentable.brand.company_name : comment.commentable.orderer.company_name %>
		<%= comment.c_at.in_time_zone("Pacific Time (US & Canada)").strftime("on %B %d, %Y at %H:%M:%S %Z") if comment.c_at.present? %> ]
	</div>
	<% end %>
</div>