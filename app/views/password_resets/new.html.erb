<div class="row">
<div class="small-6 columns end">
<h1>Reset Password</h1>
<%= form_tag password_resets_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="actions"><%= submit_tag "Reset Password", class: "button alert tiny"%></div>
<% end %>
</div><!--/.small-12-->
</div><!--/.row-->