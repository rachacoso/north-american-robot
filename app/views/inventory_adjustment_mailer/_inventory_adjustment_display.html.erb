	<div class="inventory-display <%= previous_data.present? ? 'old' : ''%>" style="background:#efefef;margin:5px 0 15px 0;padding:10px 10px 20px 10px;width:90%; <%= previous_data.present? ? 'color:#b1b1b1;' : ''%>">
		<div id="date" style="font-size:10px;font-style:italic;line-height:14px;margin-bottom:10px">
			<%= ship_date.present? ? 'Notice sent' : 'Requested' %> on <%= adjustment_date.in_time_zone("Pacific Time (US & Canada)").strftime("%B %d, %Y at %H:%M:%S %Z") %>
			<% if update_date.present? %>
			<br><%= ship_date.present? ? 'Notice updated' : 'Updated' %> on <%= update_date.in_time_zone("Pacific Time (US & Canada)").strftime("%B %d, %Y at %H:%M:%S %Z") %>
			<% end %>
		</div>
		<div id="product" style="font-weight:800;margin-bottom:10px"><%= product.name %> <%= product.item_id.present? ? "(#{product.item_id})" : "" %></div>
		<div id="units"><span style="font-size:30px"><%= units %></span> <span style="font-size:15px">units</span></div>
		<% if ship_date.present? %>
		Shipped on <%= ship_date.strftime("%B %d, %Y") %>
		<% end %>
		<%= simple_format(comment,{ id: 'comments', style: 'margin-top:10px' }, wrapper_tag: 'div').html_safe %>
	</div>