<% conversation_info_partial = "matches/conversation/conversation_#{@stage}_info" %>
<% conversation_message_block_partial = "matches/conversation_message_block" %>
<% match = this_match(@match) %>

$('#conversation-info').hide().html("<%= j (render partial: conversation_info_partial, locals: {match: match, profile: @match}) %>").fadeIn(1000);
$('#conversation-message-block').hide().html("<%= j (render partial: conversation_message_block_partial, locals: {match: match, stage: @stage}) %>").fadeIn(1000);


$('.conversation-map-subhead').hide(250);

$("#conversation-map-<%=@stage%>-subhead").show(250);


$('#conversation-propose-wrapper .conversation-left-info-column').removeClass('medium-6').addClass('medium-4');
$('#conversation-propose-wrapper .conversation-right-message-column').removeClass('medium-6').addClass('medium-8');

$('.convo-map').removeClass('viewing');
$('#conversation-map-<%=@stage%>').addClass('viewing');

conversationStage = "<%=@stage%>";
initConversations();

$(document).foundation();
$(document).foundation('tab', 'reflow');